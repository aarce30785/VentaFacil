@using VentaFacil.web.Models.Configuracion
@{
    ViewData["Title"] = "Configuración de Deducciones";
    Layout = "~/Views/Shared/_LayoutPlantilla.cshtml";
    var deducciones = ViewBag.Deducciones as List<DeduccionLey>;
    var impuestos = ViewBag.Impuestos as List<ImpuestoRenta>;
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Configuración de Deducciones e Impuestos</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- DEDUCCIONES DE LEY -->
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Deducciones de Ley (CCSS / BP)</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Concepto</th>
                                    <th>Porcentaje (%)</th>
                                    <th>Activo</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (deducciones != null)
                                {
                                    foreach (var item in deducciones)
                                    {
                                        <tr>
                                            <form asp-action="GuardarDeduccion" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <td>@item.Nombre</td>
                                                <td>
                                                    <input type="number" step="0.01" name="porcentaje" value="@item.Porcentaje" class="form-control form-control-sm" />
                                                </td>
                                                <td>
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input" id="switch_@item.Id" name="activo" value="true" @(item.Activo ? "checked" : "")>
                                                        <label class="custom-control-label" for="switch_@item.Id"></label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-save"></i></button>
                                                </td>
                                            </form>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- IMPUESTO DE RENTA -->
            <div class="col-md-6">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Tramos Impuesto de Renta (2025)</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th>Desde (₡)</th>
                                    <th>Hasta (₡)</th>
                                    <th>%</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (impuestos != null)
                                {
                                    foreach (var item in impuestos)
                                    {
                                        <tr>
                                            <form asp-action="GuardarImpuesto" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <td>
                                                    <input type="number" step="0.01" name="limiteInferior" value="@item.LimiteInferior" class="form-control form-control-sm" />
                                                </td>
                                                <td>
                                                    <input type="number" step="0.01" name="limiteSuperior" value="@item.LimiteSuperior" class="form-control form-control-sm" placeholder="Exceso" />
                                                </td>
                                                <td>
                                                    <input type="number" step="0.01" name="porcentaje" value="@item.Porcentaje" class="form-control form-control-sm" style="width: 60px;" />
                                                </td>
                                                <td>
                                                    <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-save"></i></button>
                                                </td>
                                            </form>
                                        </tr>
                                    }
                                }
                                <!-- Fila para agregar nuevo (opcional) -->
                                <tr>
                                    <form asp-action="GuardarImpuesto" method="post">
                                        <input type="hidden" name="id" value="0" />
                                        <td><input type="number" step="0.01" name="limiteInferior" class="form-control form-control-sm" placeholder="Nuevo" /></td>
                                        <td><input type="number" step="0.01" name="limiteSuperior" class="form-control form-control-sm" /></td>
                                        <td><input type="number" step="0.01" name="porcentaje" class="form-control form-control-sm" /></td>
                                        <td><button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-plus"></i></button></td>
                                    </form>
                                </tr>
                            </tbody>
                        </table>
                        <small class="text-muted">* Deje "Hasta" vacío para el último tramo (Exceso).</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
