@using VentaFacil.web.Controllers
@using VentaFacil.web.Models.Enum
@model ProcesarPagoViewModel
@{
    ViewData["Title"] = "Procesar Pago";
    Layout = "_LayoutPlantilla";
}

<div class="container">
    <h2>Procesar Pago</h2>

    @if (Model?.Pedido != null)
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Detalles del Pedido #@Model.PedidoId</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Cliente:</strong> @Model.Cliente</p>
                        <p><strong>Modalidad:</strong> @Model.Modalidad</p>
                        @if (Model.Modalidad == ModalidadPedido.EnMesa)
                        {
                            <p><strong>Mesa:</strong> @Model.NumeroMesa</p>
                        }

                        <h6>Productos:</h6>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Pedido.Items)
                                {
                                    <tr>
                                        <td>@item.NombreProducto</td>
                                        <td>@item.Cantidad</td>
                                        <td>@item.PrecioUnitario.ToString("C")</td>
                                        <td>@item.Subtotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="text-end">
                            <h5>Total: @Model.Total.ToString("C")</h5>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <!-- Formulario de pago -->
                <form id="pagoForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PedidoId" />
                    <input type="hidden" asp-for="Total" />
                    <input type="hidden" asp-for="Cliente" />

                    <div class="card">
                        <div class="card-header">
                            <h5>Información de Pago</h5>
                        </div>
                        <div class="card-body">
                            <!-- Método de Pago -->
                            <div class="form-group mb-3">
                                <label asp-for="MetodoPago" class="form-label">Método de Pago *</label>
                                <select asp-for="MetodoPago" class="form-control" required>
                                    <option value="">Seleccione método</option>
                                    <option value="Efectivo">Efectivo</option>
                                    <option value="Tarjeta">Tarjeta</option>
                                    <option value="Transferencia">Transferencia</option>
                                </select>
                                <span asp-validation-for="MetodoPago" class="text-danger"></span>
                            </div>

                            <!-- Moneda -->
                            <div class="form-group mb-3">
                                <label asp-for="Moneda" class="form-label">Moneda</label>
                                <select asp-for="Moneda" class="form-control" id="monedaSelect">
                                    <option value="CRC">Colones (₡)</option>
                                    <option value="USD">Dólares ($)</option>
                                </select>
                            </div>

                            <!-- Tasa de Cambio (solo para USD) -->
                            <div class="form-group mb-3" id="tasaCambioGroup" style="display: none;">
                                <label asp-for="TasaCambio" class="form-label">Tasa de Cambio (₡ por $) *</label>
                                <input asp-for="TasaCambio" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="TasaCambio" class="text-danger"></span>
                            </div>

                            <!-- Monto Pagado -->
                            <div class="form-group mb-3">
                                <label asp-for="MontoPagado" class="form-label">Monto Pagado *</label>
                                <input asp-for="MontoPagado" type="number" step="0.01" class="form-control" required />
                                <span asp-validation-for="MontoPagado" class="text-danger"></span>
                            </div>

                            <!-- Cambio -->
                            <div class="form-group mb-3">
                                <label class="form-label">Cambio</label>
                                <input type="text" class="form-control" id="cambioDisplay" readonly />
                                <small class="form-text text-muted" id="cambioMensaje"></small>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="button" class="btn btn-success btn-lg" id="btnConfirmarPago" data-bs-toggle="modal" data-bs-target="#confirmacionModal">
                            Confirmar Pago
                        </button>
                        <a href="@Url.Action("Editar", "Pedidos", new { id = Model.PedidoId })" class="btn btn-secondary">Volver al Pedido</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Modal de Confirmación -->
        <div class="modal fade" id="confirmacionModal" tabindex="-1" aria-labelledby="confirmacionModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmacionModalLabel">Confirmar Pago</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="text-center">
                            <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                            <h4>¿Está seguro de procesar el pago?</h4>
                            <p><strong>Pedido #@Model.PedidoId</strong></p>
                            <p><strong>Cliente:</strong> @Model.Cliente</p>
                            <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
                            <p><strong>Método de Pago:</strong> <span id="modalMetodoPago"></span></p>
                            <p><strong>Monto Pagado:</strong> <span id="modalMontoPagado"></span></p>
                            <p><strong>Cambio:</strong> <span id="modalCambio"></span></p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-success" id="btnProcesarPago">
                            <i class="fas fa-credit-card me-2"></i>Procesar Pago
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <h4>Error</h4>
            <p>No se pudo cargar la información del pedido.</p>
            <a href="@Url.Action("Index", "Pedidos")" class="btn btn-primary">Volver a Pedidos</a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Mostrar/ocultar tasa de cambio según moneda
            $('#monedaSelect').change(function() {
                if ($(this).val() === 'USD') {
                    $('#tasaCambioGroup').show();
                    $('#TasaCambio').prop('required', true);
                } else {
                    $('#tasaCambioGroup').hide();
                    $('#TasaCambio').prop('required', false);
                }
                calcularCambio();
            }).trigger('change');

            // Calcular cambio en tiempo real
            $('#MontoPagado, #TasaCambio, #monedaSelect, #MetodoPago').on('input change', function() {
                calcularCambio();
            });

            function calcularCambio() {
                var total = @Model.Total;
                var moneda = $('#monedaSelect').val();
                var montoPagado = parseFloat($('#MontoPagado').val()) || 0;
                var tasaCambio = parseFloat($('#TasaCambio').val()) || 1;

                var totalEnMoneda = moneda === 'USD' ? total / tasaCambio : total;
                var cambio = montoPagado - totalEnMoneda;

                var simboloMoneda = moneda === 'USD' ? '$' : '₡';
                var cambioTexto = (cambio >= 0 ? simboloMoneda : 'Falta: ' + simboloMoneda) + Math.abs(cambio).toFixed(2);

                $('#cambioDisplay').val(cambioTexto);

                if (cambio >= 0) {
                    $('#cambioMensaje').text('Cambio a devolver').removeClass('text-danger').addClass('text-success');
                } else {
                    $('#cambioMensaje').text('Falta por pagar').removeClass('text-success').addClass('text-danger');
                }

                // Actualizar información del modal
                $('#modalMetodoPago').text($('#MetodoPago option:selected').text());
                $('#modalMontoPagado').text(simboloMoneda + montoPagado.toFixed(2));
                $('#modalCambio').text(cambioTexto);
            }

            // Validar formulario antes de mostrar el modal
            $('#btnConfirmarPago').click(function(e) {
                e.preventDefault();

                // Validar campos requeridos
                var metodoPago = $('#MetodoPago').val();
                var montoPagado = parseFloat($('#MontoPagado').val()) || 0;
                var moneda = $('#monedaSelect').val();
                var tasaCambio = parseFloat($('#TasaCambio').val()) || 1;

                if (!metodoPago) {
                    alert('Por favor seleccione un método de pago');
                    return;
                }

                if (montoPagado <= 0) {
                    alert('Por favor ingrese un monto válido');
                    return;
                }

                if (moneda === 'USD' && tasaCambio <= 0) {
                    alert('Por favor ingrese una tasa de cambio válida');
                    return;
                }

                // Calcular si el monto es suficiente
                var total = @Model.Total;
                var totalEnMoneda = moneda === 'USD' ? total / tasaCambio : total;

                if (montoPagado < totalEnMoneda) {
                    alert('El monto pagado es insuficiente. Por favor ingrese un monto mayor.');
                    return;
                }

                // Mostrar modal si todo está correcto
                $('#confirmacionModal').modal('show');
            });

            // Procesar pago cuando se confirma en el modal
            $('#btnProcesarPago').click(function() {
                // Deshabilitar botón para evitar doble clic
                $(this).prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Procesando...');

                // Enviar formulario
                $('#pagoForm').attr('action', '@Url.Action("ProcesarPago", "Facturacion")');
                $('#pagoForm').submit();
            });

            // Calcular cambio inicial
            calcularCambio();
        });

    </script>
    
}