@model VentaFacil.web.Models.Dto.UsuarioDto

@{
    var accion = ViewBag.AccionModal as string ?? "crear";
    var esSoloLectura = accion == "ver";
    var titulo = accion switch
    {
        "crear" => "Crear Usuario",
        "editar" => "Editar Usuario",
        "ver" => "Ver Usuario",
        _ => "Usuario"
    };
    var roles = ViewBag.Roles as IEnumerable<SelectListItem> ?? new List<SelectListItem>();
}

<div class="modal fade" id="usuarioModal" tabindex="-1" aria-labelledby="usuarioModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="usuarioModalLabel">@titulo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="usuarioForm" method="post" asp-action="GuardarUsuario" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id_Usr" />
                
                <!-- Mantener parámetros de filtro -->
                <input type="hidden" name="busqueda" value="@ViewBag.BusquedaActual" />
                <input type="hidden" name="rolFiltro" value="@ViewBag.RolFiltroActual" />
                <input type="hidden" name="pagina" value="@ViewBag.PaginaActual" />

                <div class="modal-body">
                    <div class="row">
                        <!-- Nombre -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nombre" class="form-label">Nombre *</label>
                                <input asp-for="Nombre" class="form-control"
                                       placeholder="Ingrese el nombre completo"
                                       readonly="@esSoloLectura" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Correo -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Correo" class="form-label">Correo *</label>
                                <input asp-for="Correo" type="email" class="form-control"
                                       placeholder="ejemplo@correo.com"
                                       readonly="@esSoloLectura" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    @if (accion == "crear" || accion == "editar")
                    {
                        <div class="row mt-3">
                            <!-- Contraseña -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Contrasena" class="form-label">Contraseña</label>
                                    <input asp-for="Contrasena" type="password" class="form-control"
                                           id="Contrasena" name="Contrasena"
                                           placeholder="@(accion == "crear" ? "Ingrese la contraseña" : "Dejar en blanco para mantener actual")" />
                                    <small class="form-text text-muted">
                                        @(accion == "crear" ? "Mínimo 6 caracteres" : "Solo si desea cambiarla")
                                    </small>
                                </div>
                            </div>

                            <!-- Confirmar Contraseña -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmarContrasena" class="form-label">Confirmar Contraseña</label>
                                    <input asp-for="ConfirmarContrasena" type="password" class="form-control"
                                           id="ConfirmarContrasena" name="ConfirmarContrasena"
                                           placeholder="Confirme la contraseña" />
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mt-3">
                        <!-- Rol -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Rol" class="form-label">Rol *</label>
                                <select asp-for="Rol" asp-items="roles" class="form-select"
                                        disabled="@esSoloLectura">
                                    <option value="">Seleccione un rol</option>
                                </select>
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Estado -->
                        <div class="col-md-6">
                            <div class="form-group mt-4">
                                @if (esSoloLectura)
                                {
                                    <div class="form-check form-switch">
                                        <input asp-for="Estado" class="form-check-input" disabled />
                                        <label class="form-check-label">Usuario Activo</label>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-check form-switch">
                                        <input asp-for="Estado" class="form-check-input" />
                                        <label class="form-check-label" for="Estado">Usuario Activo</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    @if (!esSoloLectura)
                    {
                        <button type="submit" class="btn btn-primary">
                            @(accion == "crear" ? "Crear Usuario" : "Actualizar Usuario")
                        </button>
                    }
                    @if (esSoloLectura)
                    {
                        <button type="button" class="btn btn-warning"
                                onclick="abrirModal('editar', @Model.Id_Usr)">
                            Editar
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Prevent events from bubbling up from the modal
    (function() {
        const modalInputs = document.querySelectorAll('#usuarioModal input, #usuarioModal select, #usuarioModal textarea');
        modalInputs.forEach(input => {
            input.addEventListener('input', function(e) { e.stopPropagation(); });
            input.addEventListener('keypress', function(e) { e.stopPropagation(); });
        });
    })();
</script>
