@{
    ViewData["Title"] = "Pago Completado";
    Layout = "_LayoutPlantilla";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h4><i class="fas fa-check-circle"></i> Pago Procesado Exitosamente</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-receipt fa-5x text-success mb-3"></i>
                        <h5 class="card-title">Factura Generada</h5>
                        <p class="card-text">El pedido ha sido enviado a cocina y la factura está lista.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("DescargarFactura", "Facturacion", new { facturaId = ViewBag.FacturaId })"
                               class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-download"></i> Descargar Factura
                            </a>
                        </div>
                        <div class="col-md-6 mb-2">
                            <a href="@Url.Action("Index", "Pedidos")"
                               class="btn btn-outline-secondary btn-lg w-100">
                                <i class="fas fa-list"></i> Ver Pedidos
                            </a>
                        </div>
                    </div>

                    <div class="mt-3">
                        <small class="text-muted">
                            ¿No descargó la factura? Puede descargarla luego desde el detalle del pedido.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Opcional: Mostrar notificación de descarga automática después de 2 segundos
        setTimeout(function() {
            Swal.fire({
                title: '¿Descargar factura?',
                text: '¿Desea descargar la factura ahora?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Sí, descargar',
                cancelButtonText: 'No, luego',
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("DescargarFactura", "Facturacion", new { facturaId = ViewBag.FacturaId })';
                }
            });
        }, 2000);
    </script>
}