@using VentaFacil.web.Controllers
@using VentaFacil.web.Models.Enum
@model ProcesarPagoViewModel
@{
    ViewData["Title"] = "Procesar Pago";
    Layout = "_LayoutPlantilla";
}

<style>
    :root {
        --primary-color: #4f46e5;
        --success-color: #10b981;
    }

    .checkout-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .payment-card {
        background: #fff;
        border-radius: 24px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        overflow: hidden;
    }

    .payment-sidebar {
        background: #f8fafc;
        padding: 2rem;
        border-right: 1px solid #e2e8f0;
    }

    .payment-main {
        padding: 3rem;
    }

    .order-summary-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px dashed #cbd5e1;
    }

    .order-summary-item:last-child {
        border-bottom: none;
    }

    .total-display {
        font-size: 2.5rem;
        font-weight: 800;
        color: #1e293b;
        letter-spacing: -0.025em;
    }

    .payment-method-option {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 1rem;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .payment-method-option:hover {
        border-color: #cbd5e1;
        background: #f8fafc;
    }

    .payment-method-option.active {
        border-color: var(--primary-color);
        background: #eef2ff;
    }

    .payment-method-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: var(--primary-color);
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    }

    .input-lg-custom {
        font-size: 1.25rem;
        padding: 1rem;
        border-radius: 12px;
    }

    .btn-pay {
        background: var(--success-color);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 9999px;
        font-weight: 600;
        font-size: 1.125rem;
        width: 100%;
        transition: all 0.2s;
        box-shadow: 0 4px 6px -1px rgba(16, 185, 129, 0.2);
    }

    .btn-pay:hover {
        background: #059669;
        transform: translateY(-1px);
        box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.3);
    }

    .change-display {
        background: #1e293b;
        color: #fff;
        padding: 1.5rem;
        border-radius: 16px;
        text-align: center;
        margin-top: 2rem;
    }
    .change-display .display-4 {
        color: #fff !important;
    }
</style>

<div class="checkout-container">
    @if (Model?.Pedido != null)
    {
        <div class="payment-card">
            <div class="row g-0">
                <!-- Sidebar: Resumen del Pedido -->
                <div class="col-lg-4 payment-sidebar">
                    <div class="d-flex align-items-center mb-4">
                        <div class="avatar bg-white rounded-circle shadow-sm d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                            <i class="lni lni-cart text-primary"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Resumen del Pedido</h6>
                            <small class="text-muted">#@Model.PedidoId</small>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="p-3 bg-white rounded-3 shadow-sm mb-3">
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Cliente</small>
                            <div class="fw-bold text-dark">@Model.Cliente</div>
                        </div>
                        <div class="p-3 bg-white rounded-3 shadow-sm">
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Modalidad</small>
                            <div class="d-flex align-items-center">
                                @if (Model.Modalidad == ModalidadPedido.EnMesa)
                                {
                                    <i class="lni lni-restaurant me-2 text-info"></i>
                                    <span>Mesa @Model.NumeroMesa</span>
                                }
                                else
                                {
                                    <i class="lni lni-takeaway me-2 text-warning"></i>
                                    <span>Para Llevar</span>
                                }
                            </div>
                        </div>
                    </div>

                    <h6 class="fw-bold mb-3">Productos</h6>
                    <div class="order-items mb-4" style="max-height: 300px; overflow-y: auto;">
                        @foreach (var item in Model.Pedido.Items)
                        {
                            <div class="order-summary-item">
                                <div>
                                    <div class="fw-medium">@item.NombreProducto</div>
                                    <small class="text-muted">x @item.Cantidad</small>
                                </div>
                                <div class="fw-bold">@item.Subtotal.ToString("C")</div>
                            </div>
                        }
                    </div>

                    <div class="border-top pt-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span class="fw-bold">@Model.Total.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-lg">Total a Pagar</span>
                            <span class="fw-bold text-primary text-xl">@Model.Total.ToString("C")</span>
                        </div>
                    </div>
                </div>

                <!-- Main: Formulario de Pago -->
                <div class="col-lg-8 payment-main">
                    <div class="d-flex justify-content-between align-items-center mb-5">
                        <h2 class="fw-bold mb-0">Finalizar Pago</h2>
                        <a href="@Url.Action("Editar", "Pedidos", new { id = Model.PedidoId })" class="btn btn-light rounded-pill px-4">
                            <i class="lni lni-arrow-left me-2"></i> Volver
                        </a>
                    </div>

                    <form id="pagoForm" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="PedidoId" />
                        <input type="hidden" asp-for="Total" />
                        <input type="hidden" asp-for="Cliente" />
                        <!-- Hidden input para el método de pago seleccionado -->
                        <input type="hidden" asp-for="MetodoPago" id="inputMetodoPago" />

                        <h5 class="fw-bold mb-3">Método de Pago</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-3">
                                <div class="payment-method-option" onclick="seleccionarMetodo('Efectivo', this)">
                                    <div class="payment-method-icon">
                                        <i class="lni lni-money-protection"></i>
                                    </div>
                                    <span class="fw-medium">Efectivo</span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="payment-method-option" onclick="seleccionarMetodo('Tarjeta', this)">
                                    <div class="payment-method-icon">
                                        <i class="lni lni-credit-cards"></i>
                                    </div>
                                    <span class="fw-medium">Tarjeta</span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="payment-method-option" onclick="seleccionarMetodo('Transferencia', this)">
                                    <div class="payment-method-icon">
                                        <i class="lni lni-mobile"></i>
                                    </div>
                                    <span class="fw-medium">Transferencia</span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="payment-method-option" onclick="seleccionarMetodo('Mixto', this)">
                                    <div class="payment-method-icon">
                                        <i class="lni lni-layers"></i>
                                    </div>
                                    <span class="fw-medium">Mixto</span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="MetodoPago" class="text-danger d-block mb-3"></span>

                        <!-- SECCIÓN PAGO ÚNICO -->
                        <div id="singlePaymentSection">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Moneda</label>
                                    <select asp-for="Moneda" class="form-select form-select-lg" id="monedaSelect" style="border-radius: 12px;">
                                        <option value="CRC">🇨🇷 Colones (₡)</option>
                                        <option value="USD">🇺🇸 Dólares ($)</option>
                                    </select>
                                </div>
                                <div class="col-md-6" id="tasaCambioGroup" style="display: none;">
                                    <label asp-for="TasaCambio" class="form-label fw-bold">Tasa de Cambio</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0" style="border-radius: 12px 0 0 12px;">₡</span>
                                        <input asp-for="TasaCambio" type="number" step="0.01" class="form-control form-control-lg border-start-0" style="border-radius: 0 12px 12px 0;" placeholder="0.00" />
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="MontoPagado" class="form-label fw-bold">Monto Recibido</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0" style="border-radius: 12px 0 0 12px; font-size: 1.5rem;" id="simboloMoneda">₡</span>
                                    <input asp-for="MontoPagado" type="number" step="0.01" class="form-control input-lg-custom border-start-0" placeholder="0.00" />
                                </div>

                                <div id="conversionFeedback" class="form-text text-primary fw-bold mt-2" style="display:none;"></div>
                                <span asp-validation-for="MontoPagado" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- SECCIÓN PAGO MIXTO -->
                        <div id="splitPaymentSection" style="display: none;">
                            <div class="card bg-light border-0 mb-4">
                                <div class="card-body">
                                    <h6 class="fw-bold mb-3">Agregar Pago</h6>
                                    <div class="row g-2 align-items-end">
                                        <div class="col-md-3">
                                            <label class="form-label small">Método</label>
                                            <select id="splitMetodo" class="form-select">
                                                <option value="Efectivo">Efectivo</option>
                                                <option value="Tarjeta">Tarjeta</option>
                                                <option value="Transferencia">Transferencia</option>
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label small">Moneda</label>
                                            <select id="splitMoneda" class="form-select">
                                                <option value="CRC">CRC</option>
                                                <option value="USD">USD</option>
                                            </select>
                                        </div>
                                        <div class="col-md-2" id="splitTasaGroup" style="display:none;">
                                            <label class="form-label small">Tasa</label>
                                            <input type="number" id="splitTasa" class="form-control" placeholder="Tasa" step="0.01">
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label small">Monto</label>
                                            <input type="number" id="splitMonto" class="form-control" placeholder="0.00" step="0.01">
                                        </div>
                                        <div class="col-md-2">
                                            <button type="button" class="btn btn-primary w-100" id="btnAddPayment">
                                                <i class="lni lni-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="table-responsive mb-4">
                                <table class="table table-hover" id="paymentsTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Método</th>
                                            <th>Monto</th>
                                            <th>Conv. (CRC)</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Dynamic rows -->
                                    </tbody>
                                    <tfoot class="table-light fw-bold">
                                        <tr>
                                            <td colspan="2" class="text-end">Total Pagado:</td>
                                            <td id="splitTotalPaid">₡0.00</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" class="text-end">Restante:</td>
                                            <td id="splitRemaining" class="text-danger">@Model.Total.ToString("C")</td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            
                            <!-- Container for hidden inputs -->
                            <div id="hiddenPaymentsContainer"></div>
                        </div>

                        <div class="change-display">
                            <small class="text-uppercase text-white-50 fw-bold ls-1">Cambio a Devolver</small>
                            <div class="display-4 fw-bold mt-1" id="cambioDisplay">₡0.00</div>
                            <div id="cambioMensaje" class="mt-2 badge bg-white text-dark">Esperando monto...</div>
                        </div>

                        <div class="mt-5">
                            <button type="button" class="btn-pay" id="btnConfirmarPago">
                                Confirmar y Facturar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal Confirmación -->
        <div class="modal fade" id="confirmacionModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg" style="border-radius: 24px;">
                    <div class="modal-body p-5 text-center">
                        <div class="mb-4">
                            <div class="avatar-lg bg-success bg-opacity-10 text-success rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                <i class="lni lni-checkmark-circle fs-1"></i>
                            </div>
                        </div>
                        <h3 class="fw-bold mb-2">Confirmar Pago</h3>
                        <p class="text-muted mb-4">Verifica los detalles antes de procesar.</p>

                        <div class="bg-light p-4 rounded-3 mb-4 text-start">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Total Pedido:</span>
                                <span class="fw-bold">@Model.Total.ToString("C")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Método:</span>
                                <span class="fw-bold" id="modalMetodoPago"></span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Recibido Total:</span>
                                <span class="fw-bold" id="modalMontoPagado"></span>
                            </div>
                            <div class="border-top pt-2 mt-2 d-flex justify-content-between">
                                <span class="fw-bold text-dark">Cambio:</span>
                                <span class="fw-bold text-success" id="modalCambio"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-success btn-lg rounded-pill" id="btnProcesarPago">
                                <i class="lni lni-printer me-2"></i> Procesar y Facturar
                            </button>
                            <button type="button" class="btn btn-light btn-lg rounded-pill" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger shadow-sm border-0 rounded-3 p-4 text-center">
            <i class="lni lni-warning fs-1 mb-3 d-block"></i>
            <h4 class="fw-bold">Error al cargar el pedido</h4>
            <p class="text-muted mb-4">No se pudo recuperar la información necesaria.</p>
            <a href="@Url.Action("Index", "Pedidos")" class="btn btn-primary rounded-pill px-4">Volver al Inicio</a>
        </div>
    }
</div>

@section Scripts {
    <script>
        let pagos = [];
        const totalPedido = @Model.Total;

        function seleccionarMetodo(metodo, elemento) {
            // Actualizar input hidden
            document.getElementById('inputMetodoPago').value = metodo;
            
            // Actualizar estilos visuales
            document.querySelectorAll('.payment-method-option').forEach(el => el.classList.remove('active'));
            elemento.classList.add('active');
            
            if (metodo === 'Mixto') {
                $('#singlePaymentSection').hide();
                $('#splitPaymentSection').fadeIn();
                // Limpiar validaciones de pago único
                $('#MontoPagado').prop('required', false);
            } else {
                $('#splitPaymentSection').hide();
                $('#singlePaymentSection').fadeIn();
                $('#MontoPagado').prop('required', true);
            }
            
            calcularCambio();
        }

        $(document).ready(function() {
            // Inicializar selección
            var metodoActual = $('#inputMetodoPago').val();
            if(metodoActual) {
                var el = document.querySelector(`.payment-method-option[onclick*='${metodoActual}']`);
                if(el) {
                    el.classList.add('active');
                    if (metodoActual === 'Mixto') {
                        $('#singlePaymentSection').hide();
                        $('#splitPaymentSection').show();
                        $('#MontoPagado').prop('required', false);
                    }
                }
            }

            // --- Lógica Pago Único ---
            // Tasa BCCR (Venta referencial para pago en Dólares)
            const tasaVentaBccr = @((ViewBag.TipoCambioVenta as decimal?)?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "0") || 0;

            $('#monedaSelect').change(function() {
                var esUSD = $(this).val() === 'USD';
                if (esUSD) {
                    $('#tasaCambioGroup').fadeIn();
                    $('#TasaCambio').prop('required', true);
                    $('#simboloMoneda').text('$');
                    
                    // Auto-fill y bloquear si hay tasa BCCR
                    if (tasaVentaBccr > 0) {
                        $('#TasaCambio').val(tasaVentaBccr).prop('readonly', true).addClass('bg-light');
                        // Agregar badge informativo si no existe
                        if ($('#bccrBadge').length === 0) {
                             $('<small id="bccrBadge" class="text-success fw-bold d-block mt-1"><i class="lni lni-check-circle"></i> Tasa BCCR aplicada</small>').insertAfter('#TasaCambio');
                        }
                    } else {
                        // Permitir edición si falló el API
                        $('#TasaCambio').prop('readonly', false).removeClass('bg-light');
                        $('#bccrBadge').remove();
                    }
                } else {
                    $('#tasaCambioGroup').fadeOut();
                    $('#TasaCambio').prop('required', false);
                    $('#simboloMoneda').text('₡');
                }
                calcularCambio();
                actualizarReflejo();
            }).trigger('change');

            $('#MontoPagado, #TasaCambio').on('input change', function() {
                calcularCambio();
                actualizarReflejo();
            });

            function actualizarReflejo() {
                const monto = parseFloat($('#MontoPagado').val()) || 0;
                const moneda = $('#monedaSelect').val();
                const tasa = parseFloat($('#TasaCambio').val()) || tasaVentaBccr || 1;
                const feedback = $('#conversionFeedback');

                if (monto > 0) {
                    if (moneda === 'USD') {
                        // Dólares -> Colones
                        const conversion = monto * tasa;
                        feedback.text(`Equivalente a: ₡${conversion.toLocaleString('es-CR', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`).show();
                    } else {
                        // Colones -> Dólares (Referencial inversa)
                        if (tasa > 0 && tasaVentaBccr > 0) {
                             const conversion = monto / tasaVentaBccr;
                             feedback.text(`Equivalente a: $${conversion.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`).show();
                        } else {
                            feedback.hide();
                        }
                    }
                } else {
                    feedback.hide();
                }
            }

            // --- Lógica Pago Mixto ---
            $('#splitMoneda').change(function() {
                if ($(this).val() === 'USD') {
                    $('#splitTasaGroup').show();
                } else {
                    $('#splitTasaGroup').hide();
                }
            });

            $('#btnAddPayment').click(function() {
                const metodo = $('#splitMetodo').val();
                const moneda = $('#splitMoneda').val();
                const monto = parseFloat($('#splitMonto').val()) || 0;
                const tasa = parseFloat($('#splitTasa').val()) || 1;

                if (monto <= 0) {
                    alert('Ingrese un monto válido');
                    return;
                }
                if (moneda === 'USD' && tasa <= 0) {
                    alert('Ingrese una tasa de cambio válida');
                    return;
                }

                pagos.push({
                    MetodoPago: metodo,
                    Moneda: moneda,
                    Monto: monto,
                    TasaCambio: moneda === 'USD' ? tasa : null
                });

                actualizarTablaPagos();
                
                // Limpiar inputs
                $('#splitMonto').val('');
                if(moneda === 'USD') $('#splitTasa').val('');
            });

            window.eliminarPago = function(index) {
                pagos.splice(index, 1);
                actualizarTablaPagos();
            };

            function actualizarTablaPagos() {
                const tbody = $('#paymentsTable tbody');
                tbody.empty();
                $('#hiddenPaymentsContainer').empty();

                let totalPagadoCRC = 0;

                pagos.forEach((pago, index) => {
                    const montoCRC = pago.Moneda === 'USD' ? pago.Monto * pago.TasaCambio : pago.Monto;
                    totalPagadoCRC += montoCRC;

                    const row = `
                        <tr>
                            <td>${pago.MetodoPago}</td>
                            <td>${pago.Moneda} ${pago.Monto.toFixed(2)}</td>
                            <td>₡${montoCRC.toFixed(2)}</td>
                            <td class="text-end">
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="eliminarPago(${index})">
                                    <i class="lni lni-trash-can"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                    tbody.append(row);

                    // Hidden inputs for binding
                    $('#hiddenPaymentsContainer').append(`
                        <input type="hidden" name="Pagos[${index}].MetodoPago" value="${pago.MetodoPago}" />
                        <input type="hidden" name="Pagos[${index}].Monto" value="${pago.Monto}" />
                        <input type="hidden" name="Pagos[${index}].Moneda" value="${pago.Moneda}" />
                        <input type="hidden" name="Pagos[${index}].TasaCambio" value="${pago.TasaCambio || ''}" />
                    `);
                });

                $('#splitTotalPaid').text('₡' + totalPagadoCRC.toFixed(2));
                const restante = totalPedido - totalPagadoCRC;
                const restanteElem = $('#splitRemaining');
                restanteElem.text('₡' + Math.max(0, restante).toFixed(2));
                
                if (restante <= 0.01) {
                    restanteElem.removeClass('text-danger').addClass('text-success');
                } else {
                    restanteElem.removeClass('text-success').addClass('text-danger');
                }

                calcularCambio();
            }

            // --- Cálculo General ---
            function calcularCambio() {
                const metodo = $('#inputMetodoPago').val();
                let totalPagadoCRC = 0;

                if (metodo === 'Mixto') {
                    pagos.forEach(pago => {
                        totalPagadoCRC += pago.Moneda === 'USD' ? pago.Monto * pago.TasaCambio : pago.Monto;
                    });
                } else {
                    const moneda = $('#monedaSelect').val();
                    const monto = parseFloat($('#MontoPagado').val()) || 0;
                    const tasa = parseFloat($('#TasaCambio').val()) || 1;
                    totalPagadoCRC = moneda === 'USD' ? monto * tasa : monto;
                }

                const cambio = totalPagadoCRC - totalPedido;
                const cambioTexto = '₡' + Math.abs(cambio).toFixed(2);

                $('#cambioDisplay').text((cambio >= 0 ? '' : '-') + cambioTexto);

                if (cambio >= 0) {
                    $('#cambioMensaje').text('Cambio a devolver').removeClass('bg-danger text-white').addClass('bg-success text-white');
                } else {
                    $('#cambioMensaje').text('Monto insuficiente').removeClass('bg-success text-white').addClass('bg-danger text-white');
                }

                // Modal info update
                $('#modalMetodoPago').text(metodo || 'No seleccionado');
                $('#modalMontoPagado').text('₡' + totalPagadoCRC.toFixed(2));
                $('#modalCambio').text(cambioTexto);
            }

            // --- Confirmación ---
            $('#btnConfirmarPago').click(function(e) {
                e.preventDefault();
                
                const metodo = $('#inputMetodoPago').val();
                if (!metodo) {
                    alert('⚠️ Por favor seleccione un método de pago');
                    return;
                }

                let totalPagadoCRC = 0;

                if (metodo === 'Mixto') {
                    if (pagos.length === 0) {
                        alert('⚠️ Agregue al menos un pago');
                        return;
                    }
                    pagos.forEach(pago => {
                        totalPagadoCRC += pago.Moneda === 'USD' ? pago.Monto * pago.TasaCambio : pago.Monto;
                    });
                } else {
                    const moneda = $('#monedaSelect').val();
                    const monto = parseFloat($('#MontoPagado').val()) || 0;
                    const tasa = parseFloat($('#TasaCambio').val()) || 1;
                    
                    if (monto <= 0) {
                        alert('⚠️ Ingrese un monto válido');
                        return;
                    }
                    if (moneda === 'USD' && tasa <= 0) {
                        alert('⚠️ Ingrese una tasa de cambio válida');
                        return;
                    }
                    totalPagadoCRC = moneda === 'USD' ? monto * tasa : monto;
                }

                if (totalPagadoCRC < totalPedido - 0.01) {
                    alert('⚠️ El monto pagado es insuficiente');
                    return;
                }

                $('#confirmacionModal').modal('show');
            });

            $('#btnProcesarPago').click(function() {
                $(this).prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Procesando...');
                $('#pagoForm').attr('action', '@Url.Action("ProcesarPago", "Facturacion")');
                $('#pagoForm').submit();
            });
        });
    </script>
}