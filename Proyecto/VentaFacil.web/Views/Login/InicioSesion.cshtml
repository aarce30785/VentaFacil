@model VentaFacil.web.Models.Dto.LoginDto
@{
    ViewData["Title"] = "Inicio de Sesión";
    Layout = "_LayoutPlantilla";
}

<div class="signin-wrapper">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>Iniciar sesión</h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="row g-0 auth-row">
                    <div class="col-lg-6">
                        <div class="auth-cover-wrapper bg-primary-100">
                            <div class="auth-cover">
                                <div class="title text-center">
                                    <h1 class="text-primary mb-10">¡Bienvenido de nuevo!</h1>
                                    <p class="text-medium">
                                        Inicia sesión en tu cuenta para continuar
                                    </p>
                                </div>
                                <div class="cover-image">
                                    <img src="~/Plantilla/images/auth/signin-image.svg" alt="Imagen de inicio de sesión" />
                                </div>
                                <div class="shape-image">
                                    <img src="~/Plantilla/images/auth/shape.svg" alt="Decoración" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="signin-wrapper">
                            <div class="form-wrapper">
                                <h6 class="mb-15">Inicio de sesión</h6>
                                <p class="text-sm mb-25">
                                    Ingresa tus credenciales para acceder al sistema.
                                </p>
                                <form asp-action="InicioSesion" asp-controller="Login" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="input-style-1">
                                                <label asp-for="Correo" class="form-label">Correo electrónico</label>
                                                <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com" />
                                                <span asp-validation-for="Correo" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <!-- end col -->
                                        <div class="col-12">
                                            <div class="input-style-1">
                                                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                                                <input asp-for="Contrasena" type="password" class="form-control" placeholder="Ingresa tu contraseña" />
                                                <span asp-validation-for="Contrasena" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- end col -->
                                        <div class="col-xxl-6 col-lg-12 col-md-6">
                                            <div class="form-check checkbox-style mb-30">
                                                <input class="form-check-input" type="checkbox" asp-for="Recordarme" id="checkbox-remember" />
                                                <label class="form-check-label" for="checkbox-remember">
                                                    Recordarme
                                                </label>
                                            </div>
                                        </div>
                                        <!-- end col -->
                                        <div class="col-xxl-6 col-lg-12 col-md-6">
                                            <div class="text-start text-md-end text-lg-start text-xxl-end mb-30">
                                                <a href="#0" class="hover-underline" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
                                                    ¿Olvidaste tu contraseña?
                                                </a>
                                            </div>
                                        </div>
                                        <!-- end col -->
                                        <div class="col-12">
                                            <div class="button-group d-flex flex-column align-items-center">
                                                <button type="submit" class="main-btn primary-btn btn-hover w-100 text-center mb-3">
                                                    Iniciar sesión
                                                </button>
                                                <a href="@Url.Action("Index", "Menu")" class="main-btn light-btn btn-hover w-100 text-center" style="background-color: #f8f9fa; color: #2a5298; border: 1px solid #2a5298;">
                                                    <i class="fas fa-utensils me-2"></i> Ver Menú Público
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- end row -->
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
</div>

    <!-- Modal de Recuperar Contraseña -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Recuperar Contraseña</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="text-sm mb-3">Ingresa tu correo electrónico y te enviaremos las instrucciones para restablecer tu contraseña.</p>
                    <form asp-action="OlvidoContrasena" asp-controller="Login" method="post">
                        @Html.AntiForgeryToken()
                        <div class="input-style-1">
                            <label>Correo Electrónico</label>
                            <input type="email" name="correo" class="form-control" placeholder="ejemplo@correo.com" required />
                        </div>
                        <div class="d-flex justify-content-end mt-4">
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="main-btn primary-btn btn-hover">Enviar Instrucciones</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}