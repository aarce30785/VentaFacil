@model VentaFacil.web.Models.Dto.ProductoDto

@{
    var accion = ViewBag.AccionModal as string ?? "crear";
    var esSoloLectura = accion == "ver";
    var titulo = accion switch
    {
        "crear" => "Crear Producto",
        "editar" => "Editar Producto",
        "ver" => "Ver Producto",
        _ => "Producto"
    };
    var mostrarImagen = !string.IsNullOrEmpty(Model.Imagen) && (ViewBag.AccionModal == "editar" || ViewBag.AccionModal == "ver");
}

<div class="modal fade" id="productoModal" tabindex="-1" aria-labelledby="productoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productoModalLabel">@titulo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="productoForm" enctype="multipart/form-data" method="post" asp-action="GuardarProducto" novalidate>
                @Html.AntiForgeryToken()

                <!-- Campos ocultos para mantener el estado -->
                <input type="hidden" asp-for="Id_Producto" />
                <input type="hidden" name="busqueda" value="@ViewBag.BusquedaActual" />
                <input type="hidden" name="categoriaFiltro" value="@ViewBag.CategoriaFiltroActual" />
                <input type="hidden" name="pagina" value="@ViewBag.PaginaActual" />

                <div class="modal-body">
                    <div class="row">
                        <!-- Nombre -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nombre" class="form-label">Nombre *</label>
                                <input asp-for="Nombre" class="form-control"
                                       placeholder="Ingrese el nombre del producto"
                                       required
                                       readonly="@esSoloLectura" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Precio -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Precio" class="form-label">Precio *</label>
                                <input asp-for="Precio" type="number" step="0.01" min="0" class="form-control"
                                       placeholder="0.00"
                                       required
                                       readonly="@esSoloLectura" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <!-- Categoría -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Id_Categoria" class="form-label">Categoría *</label>
                                <select asp-for="Id_Categoria" class="form-select"
                                        asp-items="@(ViewBag.Categorias as List<SelectListItem> ?? new List<SelectListItem>())"
                                        required
                                        disabled="@esSoloLectura">
                                    <option value="">Seleccione una categoría</option>
                                </select>
                                <span asp-validation-for="Id_Categoria" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Stock Mínimo -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="StockMinimo" class="form-label">Stock Mínimo</label>
                                <input asp-for="StockMinimo" type="number" min="1" class="form-control"
                                       placeholder="0"
                                       required
                                       readonly="@esSoloLectura" />
                                <span asp-validation-for="StockMinimo" class="text-danger"></span>
                            </div>
                        </div>

                         <!-- Stock Actual -->
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="StockActual" class="form-label">Stock Actual</label>
                                <input asp-for="StockActual" type="number" min="0" class="form-control"
                                       placeholder="0"
                                       required
                                       readonly="@esSoloLectura" />
                                <span asp-validation-for="StockActual" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Descripción -->
                    <div class="form-group mt-3">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"
                                  placeholder="Ingrese una descripción del producto"
                                  readonly="@esSoloLectura"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <!-- Estado -->
                    @if (!esSoloLectura)
                    {
                        <div class="form-check mt-3">
                            <input asp-for="Estado" class="form-check-input" />
                            <label asp-for="Estado" class="form-check-label">Activo</label>
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            <strong>Estado:</strong>
                            <span class="badge @(Model.Estado ? "bg-success" : "bg-secondary")">
                                @(Model.Estado ? "Activo" : "Inactivo")
                            </span>
                        </div>
                    }

                    <!-- Imagen actual o placeholder -->
                    @if (ViewBag.AccionModal == "editar" || ViewBag.AccionModal == "ver")
                    {
                        <div class="mb-3 text-center">
                            <label class="form-label">Imagen actual</label><br />
                            @if (mostrarImagen)
                            {
                                <img src="@Model.Imagen" alt="Imagen del producto" style="max-width:200px;max-height:200px; object-fit: contain;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center mx-auto" style="width: 200px; height: 200px; border: 1px dashed #ccc; border-radius: 8px;" role="img" aria-label="Sin imagen disponible" title="Sin imagen disponible">
                                    <div class="text-muted text-center">
                                        <i class="lni lni-image fs-1 mb-2"></i>
                                        <p class="mb-0 small">Sin imagen disponible</p>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Campo para subir nueva imagen si corresponde -->
                    @if (ViewBag.AccionModal == "editar" || ViewBag.AccionModal == "crear")
                    {
                        <div class="mb-3">
                            <label for="ImagenFile" class="form-label">Cambiar imagen</label>
                            <input type="file" class="form-control" id="ImagenFile" name="ImagenFile" accept="image/*" />
                        </div>
                    }
                </div>

                <div class="modal-footer d-flex justify-content-between w-100">
                    <div>
                        @if (accion == "editar" && Model.Id_Producto > 0)
                        {
                            <button type="button" class="btn btn-danger" onclick="confirmarEliminacionProducto(@Model.Id_Producto, '@Model.Nombre.Replace("'", "\\'")')">
                                <i class="lni lni-trash-can me-1"></i> Eliminar
                            </button>
                        }
                    </div>
                    <div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        @if (!esSoloLectura)
                        {
                            <button type="submit" class="btn btn-primary">
                                @(accion == "crear" ? "Crear Producto" : "Actualizar Producto")
                            </button>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


