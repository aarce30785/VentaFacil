@using VentaFacil.web.Models.Dto
@model AplicarDeduccionesDto

@{
    ViewData["Title"] = "Aplicar Deducciones";
    Layout = "~/Views/Shared/_LayoutPlantilla.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Aplicar Deducciones</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Consultar", "PlanillaUI")">Planilla</a></li>
                    <li class="breadcrumb-item active">Aplicar Deducciones</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-check"></i> Éxito</h5>
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Error</h5>
                @TempData["Error"]
            </div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Formulario de Deducciones</h3>
                    </div>

                    <form asp-controller="PlanillaUI" asp-action="AplicarDeducciones" method="post">
                        @Html.AntiForgeryToken()

                        <div class="card-body">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Id_Nomina">Nómina</label>
                                <select asp-for="Id_Nomina" asp-items="ViewBag.Nominas" class="form-control">
                                    <option value="">-- Seleccione una nómina --</option>
                                </select>
                                <span asp-validation-for="Id_Nomina" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PorcentajeCCSS">Porcentaje CCSS</label>
                                        <input asp-for="PorcentajeCCSS" type="number" step="0.0001" class="form-control" placeholder="0.0925" />
                                        <span asp-validation-for="PorcentajeCCSS" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PorcentajeImpuestoRenta">Porcentaje Renta</label>
                                        <input asp-for="PorcentajeImpuestoRenta" type="number" step="0.0001" class="form-control" placeholder="0.10" />
                                        <span asp-validation-for="PorcentajeImpuestoRenta" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-check">
                                    <input asp-for="RecalcularSalariosNetos" type="checkbox" class="form-check-input" />
                                    <label asp-for="RecalcularSalariosNetos" class="form-check-label">
                                        Recalcular salarios netos
                                    </label>
                                </div>
                            </div>

                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Aplicar Deducciones
                            </button>
                            <a href="@Url.Action("Consultar", "PlanillaUI")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>