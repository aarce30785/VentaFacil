@using VentaFacil.web.Models.ViewModel
@model DetalleFacturaViewModel
@{
    ViewData["Title"] = "Detalle de Factura";
    Layout = "_LayoutPlantilla";
}

<style>
    :root {
        --primary-color: #4f46e5;
        --primary-hover: #4338ca;
        --success-color: #10b981;
        --bg-color: #f8fafc;
        --card-bg: #ffffff;
        --text-main: #1e293b;
        --text-muted: #64748b;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    .invoice-container {
        max-width: 850px;
        margin: 2rem auto;
        animation: slideUp 0.5s ease-out;
    }

    .invoice-card {
        background: var(--card-bg);
        border-radius: 24px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .invoice-header {
        background: linear-gradient(135deg, #4f46e5 0%, #3b82f6 100%);
        padding: 3rem 2rem;
        color: white;
        text-align: center;
        position: relative;
    }

    .invoice-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 40px;
        background: var(--card-bg);
        border-top-left-radius: 24px;
        border-top-right-radius: 24px;
    }

    .success-badge {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(8px);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .invoice-body {
        padding: 1rem 3rem 3rem;
    }

    .info-group {
        background: #f8fafc;
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 1px solid #e2e8f0;
    }

    .info-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .info-value {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-main);
    }

    .table-custom th {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: var(--text-muted);
        font-weight: 600;
        border-bottom: 2px solid #e2e8f0;
        padding-bottom: 1rem;
    }

    .table-custom td {
        padding: 1rem 0;
        border-bottom: 1px dashed #e2e8f0;
        color: var(--text-main);
    }

    .table-custom tr:last-child td {
        border-bottom: none;
    }

    .total-section {
        background: #1e293b;
        color: white;
        border-radius: 16px;
        padding: 2rem;
        margin-top: 2rem;
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.75rem;
        opacity: 0.9;
    }

    .total-row.final {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        font-size: 1.5rem;
        font-weight: 700;
        opacity: 1;
    }

    .btn-custom {
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-primary-custom {
        background: var(--primary-color);
        color: white;
        box-shadow: 0 4px 6px -1px rgba(79, 70, 229, 0.3);
    }

    .btn-primary-custom:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(79, 70, 229, 0.4);
        color: white;
    }

    .btn-outline-custom {
        background: white;
        border: 2px solid #e2e8f0;
        color: var(--text-muted);
    }

    .btn-outline-custom:hover {
        border-color: var(--text-muted);
        color: var(--text-main);
        background: #f8fafc;
    }

    @@keyframes slideUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="invoice-container">
    <div class="invoice-card">
        <div class="invoice-header">
            <div class="success-badge">
                <i class="lni lni-checkmark fs-1 text-white"></i>
            </div>
            <h1 class="h3 fw-bold mb-2">¡Pago Exitoso!</h1>
            <p class="mb-0 opacity-75">Gracias por su compra</p>
        </div>

        <div class="invoice-body">
            <!-- Info Grid -->
            <div class="info-group">
                <div class="row g-4">
                    <div class="col-6 col-md-3">
                        <div class="info-label">N° Factura</div>
                        <div class="info-value">#@(Model.Factura?.NumeroFactura ?? "---")</div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="info-label">Fecha</div>
                        <div class="info-value">@(Model.Factura?.FechaEmision.ToString("dd/MM/yy HH:mm") ?? DateTime.Now.ToString("g"))</div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="info-label">Cliente</div>
                        <div class="info-value">@(Model.Factura?.Cliente ?? "General")</div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="info-label">Método</div>
                        <div class="info-value">
                            <span class="badge bg-white text-primary border shadow-sm">
                                @(Model.Factura?.MetodoPago.ToString() ?? "Efectivo")
                            </span>
                        </div>
                    </div>
                </div>

                <div class="total-section">
                    <div class="total-row">
                        <span>Subtotal</span>
                        <span>@((Model.Factura?.Total ?? 0).ToString("C"))</span>
                    </div>
                    <div class="total-row">
                        <span>Impuestos</span>
                        <span>$0.00</span>
                    </div>
                    <div class="total-row final">
                        <span>Total</span>
                        <span>@((Model.Factura?.Total ?? 0).ToString("C"))</span>
                    </div>
                    
                    <div class="mt-4 pt-3 border-top border-secondary">
                        <div class="d-flex justify-content-between text-white-50 small mb-1">
                            <span>Pagado con @(Model.Factura?.Moneda ?? "CRC")</span>
                            <span>@((Model.Factura?.MontoPagado ?? 0).ToString("C"))</span>
                        </div>
                        <div class="d-flex justify-content-between text-success fw-bold">
                            <span>Cambio</span>
                            <span>@((Model.Factura?.Cambio ?? 0).ToString("C"))</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detalle de Productos y Devolución -->
            <div class="info-group">
                <h5 class="mb-3">Detalle de Productos</h5>
                
                <form id="formDevolucion" method="post" action="@Url.Action("Devolucion", "Facturacion")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="facturaId" value="@Model.FacturaId" />
                    
                    <div class="table-responsive">
                        <table class="table table-custom w-100">
                            <thead>
                                <tr>
                                    @if (Model.Factura?.EstadoFactura == VentaFacil.web.Models.Enum.EstadoFactura.Activa)
                                    {
                                        <th style="width: 50px;">Dev.</th>
                                    }
                                    <th>Producto</th>
                                    <th class="text-center">Cant.</th>
                                    <th class="text-end">Precio</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null)
                                {
                                    foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            @if (Model.Factura?.EstadoFactura == VentaFacil.web.Models.Enum.EstadoFactura.Activa)
                                            {
                                                <td>
                                                    <div class="form-check">
                                                        <input class="form-check-input item-devolucion" type="checkbox" name="itemsDevolver" value="@item.ProductoId">
                                                    </div>
                                                </td>
                                            }
                                            <td>@item.NombreProducto</td>
                                            <td class="text-center">@item.Cantidad</td>
                                            <td class="text-end">@item.PrecioUnitario.ToString("C")</td>
                                            <td class="text-end">@item.Subtotal.ToString("C")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Factura?.EstadoFactura == VentaFacil.web.Models.Enum.EstadoFactura.Activa)
                    {
                        <div class="mt-3 text-end">
                            <button type="submit" class="btn btn-warning btn-sm" id="btnProcesarDevolucion" disabled>
                                <i class="lni lni-undo"></i> Procesar Devolución Seleccionada
                            </button>
                        </div>
                    }
                </form>
            </div>

            <!-- Actions -->
            <div class="d-grid gap-3 d-md-flex justify-content-md-between align-items-center mt-5">
                <a href="@Url.Action("Index", "Pedidos")" class="btn btn-outline-custom text-decoration-none">
                    <i class="lni lni-arrow-left"></i> Volver a Pedidos
                </a>
                <button id="btnDescargarPdf" class="btn btn-primary-custom px-5">
                    <i class="lni lni-download"></i> Descargar PDF
                </button>
                <button onclick="imprimirFactura(false)" class="btn btn-success px-5">
                    <i class="lni lni-printer"></i> Imprimir
                </button>
                <button onclick="imprimirFactura(true)" class="btn btn-secondary px-5">
                    <i class="lni lni-printer"></i> Reimprimir (Copia)
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const btnDescargarPdf = document.getElementById('btnDescargarPdf');

            // Lógica para habilitar botón de devolución
            const checkboxes = document.querySelectorAll('.item-devolucion');
            const btnDevolucion = document.getElementById('btnProcesarDevolucion');

            if (checkboxes.length > 0 && btnDevolucion) {
                checkboxes.forEach(cb => {
                    cb.addEventListener('change', function() {
                        const anyChecked = Array.from(checkboxes).some(c => c.checked);
                        btnDevolucion.disabled = !anyChecked;
                    });
                });
            }

            // Obtener el ID directamente del modelo
            const facturaId = @Model.FacturaId;
            const pdfUrl = `/Facturacion/DescargarFactura?facturaId=${facturaId}`;

            if (btnDescargarPdf) {
                btnDescargarPdf.addEventListener('click', function() {
                    descargarDirecto();
                });
            }

            async function descargarDirecto() {
                if (!facturaId || facturaId === 0) {
                    alert('Error: No se pudo obtener el ID de la factura.');
                    return;
                }

                const originalText = btnDescargarPdf.innerHTML;
                btnDescargarPdf.disabled = true;
                btnDescargarPdf.innerHTML = '<i class="lni lni-spinner lni-spin me-2"></i> Descargando...';

                try {
                    const response = await fetch(pdfUrl);

                    
                    if (!response.ok) {
                        const errorText = await response.text();
                        throw new Error(`Error ${response.status}: ${response.statusText}`);
                    }

                    
                    const contentType = response.headers.get('content-type');
                    if (!contentType || !contentType.includes('application/pdf')) {
                        throw new Error('La respuesta no es un PDF válido');
                    }

                    const blob = await response.blob();

                   
                    if (blob.size === 0) {
                        throw new Error('El archivo PDF está vacío');
                    }

                    const url = window.URL.createObjectURL(blob);
                    const link = document.createElement('a');
                    link.href = url;
                    link.download = `Factura-${facturaId}.pdf`;
                    link.style.display = 'none';
                    document.body.appendChild(link);

                    
                    link.addEventListener('click', function() {
                        setTimeout(() => {
                            window.URL.revokeObjectURL(url);
                            document.body.removeChild(link);
                            btnDescargarPdf.disabled = false;
                            btnDescargarPdf.innerHTML = originalText;
                        }, 100);
                    });

                    link.click();

                } catch (error) {
                    console.error('Error en la descarga:', error);

                   
                    if (error.message.includes('Error 404')) {
                        alert('No se encontró la factura solicitada.');
                    } else if (error.message.includes('Error 500')) {
                        alert('Error del servidor al generar la factura.');
                    } else if (error.message.includes('PDF')) {
                        alert('Error: No se pudo generar el PDF correctamente.');
                    } else {
                        alert('Hubo un error al descargar la factura: ' + error.message);
                    }
                } finally {
                    
                    setTimeout(() => {
                        if (!btnDescargarPdf.disabled) return;
                        btnDescargarPdf.disabled = false;
                        btnDescargarPdf.innerHTML = originalText;
                    }, 3000);
                }
            }
        });

        async function imprimirFactura(esCopia) {
            const facturaId = @Model.FacturaId;
            const url = `/Facturacion/DescargarFactura?facturaId=${facturaId}&esCopia=${esCopia}`;

            try {
                const response = await fetch(url);
                if (!response.ok) throw new Error('Error al obtener la factura');

                const blob = await response.blob();
                const blobUrl = URL.createObjectURL(blob);

                // Crear un iframe oculto para imprimir
                const iframe = document.createElement('iframe');
                iframe.style.display = 'none';
                iframe.src = blobUrl;
                document.body.appendChild(iframe);

                iframe.onload = function () {
                    setTimeout(function () {
                        try {
                            iframe.contentWindow.focus();
                            iframe.contentWindow.print();
                        } catch (e) {
                            console.error('Error al imprimir:', e);
                        } finally {
                            
                            setTimeout(() => {
                                document.body.removeChild(iframe);
                                URL.revokeObjectURL(blobUrl);
                            }, 1000);
                        }
                    }, 500);
                };

            } catch (error) {
                alert('Error al intentar imprimir: ' + error.message);
            }
        }
    </script>
}