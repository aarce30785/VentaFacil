@model VentaFacil.web.Models.Dto.InventarioDto

@{
    ViewData["Title"] = "Registrar";
}

<h1>Registrar en inventario</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_Producto" class="control-label"></label>
                <input asp-for="Id_Producto" class="form-control" />
                <span asp-validation-for="Id_Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockActual" class="control-label"></label>
                <input asp-for="StockActual" class="form-control" />
                <span asp-validation-for="StockActual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Volver al inventario</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
