@using VentaFacil.web.Models.Dto
@model GenerarNominaDto

<style>
    :root {
        --card-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
    }
    .premium-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: var(--card-shadow);
        border: 1px solid rgba(0,0,0,0.05);
        overflow: hidden;
        margin-bottom: 2rem;
        padding: 2rem 1.5rem 1.5rem 1.5rem;
    }
    .form-label {
        font-weight: 600;
        color: #374151;
    }
    .form-select, .form-control {
        border-radius: 30px;
        font-size: 1rem;
    }
    .btn-premium {
        border-radius: 30px !important;
        font-weight: 600;
        padding: 0.5rem 1.5rem;
    }
    .card-title {
        font-weight: 700;
        color: #6d4c41;
    }
</style>

<section class="content-header mb-4">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2 class="fw-bold text-dark">Generar Nómina</h2>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Consultar", "Planilla")">Planilla</a></li>
                    <li class="breadcrumb-item active">Generar Nómina</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><i class="icon fas fa-check"></i> Éxito</strong> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><i class="icon fas fa-ban"></i> Error</strong> @TempData["Error"]
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="premium-card">
                    <div class="mb-4">
                        <h4 class="card-title mb-0">Parámetros de Generación</h4>
                    </div>
                    <form asp-controller="Planilla" asp-action="GenerarNomina" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="FechaInicio" class="form-label">Fecha Inicio</label>
                                <input asp-for="FechaInicio" type="date" class="form-control" />
                                <span asp-validation-for="FechaInicio" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FechaFinal" class="form-label">Fecha Final</label>
                                <input asp-for="FechaFinal" type="date" class="form-control" />
                                <span asp-validation-for="FechaFinal" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IncluirSoloUsuariosActivos" class="form-check-input" type="checkbox" />
                                <label asp-for="IncluirSoloUsuariosActivos" class="form-check-label">
                                    Incluir solo usuarios activos
                                </label>
                            </div>
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-premium">
                                <i class="fas fa-cogs"></i> Generar Nómina
                            </button>
                            <a href="@Url.Action("Consultar", "Planilla")" class="btn btn-secondary btn-premium">
                                <i class="fas fa-times"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>