@using VentaFacil.web.Models.Dto
@model RegistrarExtrasBonosDto

@{
    ViewData["Title"] = "Registrar Extras y Bonificaciones";
    Layout = "~/Views/Shared/_LayoutPlantilla.cshtml";
}

<div class="title-wrapper pt-30">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="title">
                <h2>Registrar Extras y Bonificaciones</h2>
            </div>
        </div>
        <div class="col-md-6">
            <div class="breadcrumb-wrapper">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Consultar", "Planilla")">Planilla</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Registrar Extras y Bonificaciones</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="form-layout-wrapper">
    <div class="row">
        <div class="col-lg-12">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-check"></i> Éxito</h5>
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Error</h5>
                @TempData["Error"]
            </div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Formulario de Extras y Bonos</h3>
                    </div>
                    <form asp-controller="Planilla" asp-action="RegistrarExtrasBonos" method="post">
                        <div class="card-body">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Id_Planilla">Planilla</label>
                                <select asp-for="Id_Planilla" class="form-control" asp-items="ViewBag.Planillas">
                                    <option value="">-- Seleccione una planilla --</option>
                                </select>
                                <span asp-validation-for="Id_Planilla" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="HorasExtras">Horas Extras</label>
                                        <input asp-for="HorasExtras" type="number" step="0.5" class="form-control" placeholder="0.00" />
                                        <span asp-validation-for="HorasExtras" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="MontoBonificaciones">Monto en Bonificaciones</label>
                                        <input asp-for="MontoBonificaciones" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                        <span asp-validation-for="MontoBonificaciones" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Observaciones">Observaciones (Opcional)</label>
                                <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Comentarios adicionales..."></textarea>
                                <span asp-validation-for="Observaciones" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                            <a href="@Url.Action("Consultar", "Planilla")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>