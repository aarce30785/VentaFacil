@model List<VentaFacil.web.Models.Dto.FacturaDto>

@{
    ViewData["Title"] = "Historial de Facturas";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Historial de Facturas</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Búsqueda de Facturas</h6>
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("Index", "Facturacion")" class="mb-4">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="fechaInicio" class="form-label">Fecha Inicio</label>
                        <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" value="@ViewBag.FechaInicio">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="fechaFin" class="form-label">Fecha Fin</label>
                        <input type="date" class="form-control" id="fechaFin" name="fechaFin" value="@ViewBag.FechaFin">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="numeroFactura" class="form-label">Número Factura (ID)</label>
                        <input type="number" class="form-control" id="numeroFactura" name="numeroFactura" value="@ViewBag.NumeroFactura" placeholder="Ej: 123">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="cliente" class="form-label">Cliente</label>
                        <input type="text" class="form-control" id="cliente" name="cliente" value="@ViewBag.Cliente" placeholder="Nombre del cliente">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-right">
                        <a href="@Url.Action("Index", "Facturacion")" class="btn btn-secondary mr-2">
                            <i class="fas fa-undo"></i> Limpiar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                </div>
            </form>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>N° Factura</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th>Total</th>
                                <th>Método Pago</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var factura in Model)
                            {
                                <tr>
                                    <td>@factura.NumeroFactura</td>
                                    <td>@factura.FechaEmision.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@factura.Cliente</td>
                                    <td>@factura.Total.ToString("C") @factura.Moneda</td>
                                    <td>@factura.MetodoPago</td>
                                    <td>
                                        @if (factura.EstadoFactura == VentaFacil.web.Models.Enum.EstadoFactura.Activa)
                                        {
                                            <span class="badge badge-success">Activa</span>
                                        }
                                        else if (factura.EstadoFactura == VentaFacil.web.Models.Enum.EstadoFactura.Anulada)
                                        {
                                            <span class="badge badge-danger">Anulada</span>
                                        }
                                        else if (factura.EstadoFactura == VentaFacil.web.Models.Enum.EstadoFactura.NotaCredito)
                                        {
                                            <span class="badge badge-warning">Nota de Crédito</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="Acciones Factura">
                                            <a href="@Url.Action("DetalleFactura", "Facturacion", new { facturaId = factura.Id_Factura })" class="btn btn-info btn-sm" data-toggle="tooltip" title="Ver Detalle">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <!-- Acción Imprimir PDF -->
                                            <a href="@Url.Action("DescargarFactura", "Facturacion", new { facturaId = factura.Id_Factura })" class="btn btn-secondary btn-sm" data-toggle="tooltip" title="Imprimir PDF" target="_blank">
                                                <i class="fas fa-print"></i>
                                            </a>
                                            
                                            @if (factura.EstadoFactura == VentaFacil.web.Models.Enum.EstadoFactura.Activa)
                                            {
                                                <!-- Acción Anular Factura -->
                                                <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip" title="Anular Factura" onclick="abrirModalAnular(@factura.Id_Factura, '@factura.NumeroFactura')">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                                
                                                <!-- Acción Devolución -->
                                                <button type="button" class="btn btn-warning btn-sm" data-toggle="tooltip" title="Devolución / Nota de Crédito" onclick="abrirModalDevolucion(@factura.Id_Factura, '@factura.NumeroFactura')">
                                                    <i class="fas fa-undo"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-lg mb-2"></i><br />
                    No se encontraron facturas con los criterios de búsqueda especificados.
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal Anular Factura -->
<div class="modal fade" id="modalAnular" tabindex="-1" role="dialog" aria-labelledby="modalAnularLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAnularLabel">Anular Factura</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formAnular" method="post" action="@Url.Action("Anular", "Facturacion")">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="anularFacturaId" name="facturaId" />
                    <p>¿Está seguro que desea anular la factura <strong id="anularNumeroFactura"></strong>?</p>
                    <div class="form-group">
                        <label for="justificacion" class="col-form-label">Justificación:</label>
                        <textarea class="form-control" id="justificacion" name="justificacion" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Anular Factura</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Devolución -->
<div class="modal fade" id="modalDevolucion" tabindex="-1" role="dialog" aria-labelledby="modalDevolucionLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalDevolucionLabel">Registrar Devolución</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Funcionalidad de devolución para la factura <strong id="devolucionNumeroFactura"></strong>.</p>
                <p>Para procesar una devolución parcial, vaya al detalle de la factura.</p>
                <a id="btnIrADevolucion" href="#" class="btn btn-primary btn-block">Ir a Detalle para Devolución</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function abrirModalAnular(id, numero) {
            $('#anularFacturaId').val(id);
            $('#anularNumeroFactura').text(numero);
            $('#modalAnular').modal('show');
        }

        function abrirModalDevolucion(id, numero) {
            $('#devolucionNumeroFactura').text(numero);
            var url = '@Url.Action("DetalleFactura", "Facturacion")' + '?facturaId=' + id;
            $('#btnIrADevolucion').attr('href', url);
            $('#modalDevolucion').modal('show');
        }
    </script>
}
