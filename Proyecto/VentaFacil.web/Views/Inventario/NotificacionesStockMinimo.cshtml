@model List<VentaFacil.web.Models.Dto.InventarioDto>

<style>
    .stock-modal-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
        padding: 2rem 1.5rem 1.5rem 1.5rem;
        margin-bottom: 1.5rem;
    }
    .stock-modal-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #6d4c41;
        margin-bottom: 1rem;
    }
    .stock-list-group .list-group-item {
        border-radius: 8px;
        margin-bottom: 0.5rem;
        font-size: 1rem;
        background: #fffbe6;
        border: 1px solid #f59e0b;
        color: #a16207;
        font-weight: 500;
    }
    .stock-list-group .list-group-item strong {
        color: #dc2626;
    }
    .stock-alert-success {
        border-radius: 8px;
        font-size: 1rem;
        background: #e6fffa;
        color: #059669;
        border: 1px solid #10b981;
        padding: 1rem;
        margin-bottom: 1rem;
    }
</style>

<div class="stock-modal-card">
    <div class="stock-modal-title">
        <i class="lni lni-alarm text-warning me-2"></i> Notificaciones de Stock Mínimo
    </div>
    @if (Model != null && Model.Any())
    {
        <ul class="list-group stock-list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    <strong>@item.Nombre</strong> tiene el stock actual igual o menor al mínimo (@item.StockActual / mínimo: @item.StockMinimo).
                </li>
            }
        </ul>
    }
    else
    {
        <div class="stock-alert-success">
            <i class="lni lni-checkmark-circle me-2"></i> No hay productos con stock mínimo.
        </div>
    }
</div>