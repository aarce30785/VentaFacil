@using VentaFacil.web.Models.Configuracion
@{
    ViewData["Title"] = "Configuración de Deducciones";
    Layout = "~/Views/Shared/_LayoutPlantilla.cshtml";
    var deducciones = ViewBag.Deducciones as List<DeduccionLey>;
    var impuestos = ViewBag.Impuestos as List<ImpuestoRenta>;

    // Diccionario de definiciones
    var definiciones = new Dictionary<string, string>
    {
        { "SEM", "Seguro de Enfermedad y Maternidad (CCSS)" },
        { "IVM", "Invalidez, Vejez y Muerte (CCSS)" },
        { "LPT", "Ley de Protección al Trabajador (Banco Popular)" }
    };
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --hover-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .premium-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: var(--card-shadow);
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.05);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .premium-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--hover-shadow);
    }

    .card-header-premium {
        background: #f8fafc;
        padding: 1.5rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .premium-table thead th {
        background-color: #f8fafc;
        color: #222 !important;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        border-bottom: 2px solid #e2e8f0;
        padding: 1rem;
    }

    .premium-table tbody td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        color: #334155;
    }

    .form-control-premium {
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        padding: 0.5rem 0.75rem;
        transition: all 0.2s;
    }

    .form-control-premium:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    .btn-action {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }
</style>

<div class="container-fluid pt-30">
    <!-- Header -->
    <div class="title-wrapper pt-30 mb-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title">
                    <h2 class="fw-bold text-dark">Configuración General</h2>
                    <p class="text-muted text-sm">Administración de deducciones e impuestos de renta</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="breadcrumb-wrapper">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Consultar", "Planilla")">Planilla</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Configuración</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-pill px-4 mb-4" role="alert">
            <i class="lni lni-checkmark-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-pill px-4 mb-4" role="alert">
            <i class="lni lni-warning me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- DEDUCCIONES DE LEY (SUPERIOR) -->
        <div class="col-12 mb-4">
            <div class="premium-card">
                <div class="card-header-premium d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold mb-1 text-primary"><i class="lni lni-invest-monitor me-2"></i>Deducciones de Ley</h5>
                        <p class="text-xs text-muted mb-0">Cargas sociales CCSS y Banco Popular</p>
                    </div>
                </div>
                <div class="p-0">
                    <div class="table-responsive">
                        <table class="table premium-table mb-0">
                            <thead>
                                <tr>
                                    <th>Concepto</th>
                                    <th>Descripción</th>
                                    <th class="text-center" width="15%">Porcentaje</th>
                                    <th class="text-center" width="10%">Activo</th>
                                    <th class="text-center" width="10%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (deducciones != null)
                                {
                                    foreach (var item in deducciones)
                                    {
                                        var descripcion = definiciones.ContainsKey(item.Nombre) ? definiciones[item.Nombre] : "Deducción de Ley";
                                        <tr>
                                            <form asp-action="GuardarDeduccion" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <td>
                                                    <span class="badge bg-light text-dark border fw-bold">@item.Nombre</span>
                                                </td>
                                                <td>
                                                    <span class="text-muted text-sm">@descripcion</span>
                                                </td>
                                                <td>
                                                    <div class="input-group input-group-sm">
                                                        <input type="number" step="0.01" name="porcentaje" value="@item.Porcentaje" 
                                                               class="form-control form-control-premium text-center fw-bold text-primary" />
                                                        <span class="input-group-text bg-white border-start-0 text-muted">%</span>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <div class="form-check form-switch d-flex justify-content-center">
                                                        <input class="form-check-input" type="checkbox" name="activo" value="true" @(item.Activo ? "checked" : "")>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <button type="submit" class="btn btn-action btn-success text-white shadow-sm" title="Guardar Cambios">
                                                        <i class="lni lni-checkmark"></i>
                                                    </button>
                                                </td>
                                            </form>
                                        </tr>
                                    }
                                }
                                else 
                                {
                                    <tr><td colspan="5" class="text-center text-muted py-4">No hay deducciones configuradas</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- IMPUESTO DE RENTA (INFERIOR) -->
        <div class="col-12">
            <div class="premium-card">
                <div class="card-header-premium d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold mb-1 text-warning"><i class="lni lni-stats-up me-2"></i>Impuesto de Renta</h5>
                        <p class="text-xs text-muted mb-0">Tramos vigentes (2025)</p>
                    </div>
                </div>
                <div class="p-0">
                    <div class="table-responsive">
                        <table class="table premium-table mb-0">
                            <thead>
                                <tr>
                                    <th>Desde (₡)</th>
                                    <th>Hasta (₡)</th>
                                    <th class="text-center">%</th>
                                    <th class="text-center"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (impuestos != null)
                                {
                                    foreach (var item in impuestos)
                                    {
                                        <tr>
                                            <form asp-action="GuardarImpuesto" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <td>
                                                    <input type="number" step="0.01" name="limiteInferior" value="@item.LimiteInferior" 
                                                           class="form-control form-control-premium form-control-sm text-end" />
                                                </td>
                                                <td>
                                                    <input type="number" step="0.01" name="limiteSuperior" value="@item.LimiteSuperior" 
                                                           class="form-control form-control-premium form-control-sm text-end" 
                                                           placeholder="Exceso" />
                                                </td>
                                                <td width="15%">
                                                    <div class="input-group input-group-sm">
                                                        <input type="number" step="0.01" name="porcentaje" value="@item.Porcentaje" 
                                                               class="form-control form-control-premium text-center fw-bold" />
                                                        <span class="input-group-text bg-white border-start-0">%</span>
                                                    </div>
                                                </td>
                                                <td class="text-center" width="10%">
                                                    <button type="submit" class="btn btn-action btn-success text-white shadow-sm" title="Actualizar Tramo">
                                                        <i class="lni lni-checkmark"></i>
                                                    </button>
                                                </td>
                                            </form>
                                        </tr>
                                    }
                                }
                                <!-- Fila para agregar nuevo -->
                                <tr class="bg-light bg-opacity-50">
                                    <form asp-action="GuardarImpuesto" method="post">
                                        <input type="hidden" name="id" value="0" />
                                        <td>
                                            <input type="number" step="0.01" name="limiteInferior" 
                                                   class="form-control form-control-premium form-control-sm" placeholder="Nuevo Desde" />
                                        </td>
                                        <td>
                                            <input type="number" step="0.01" name="limiteSuperior" 
                                                   class="form-control form-control-premium form-control-sm" placeholder="Nuevo Hasta" />
                                        </td>
                                        <td>
                                            <input type="number" step="0.01" name="porcentaje" 
                                                   class="form-control form-control-premium form-control-sm text-center" placeholder="%" />
                                        </td>
                                        <td class="text-center">
                                            <button type="submit" class="btn btn-action btn-primary text-white shadow-sm" title="Agregar Nuevo Tramo">
                                                <i class="lni lni-plus"></i>
                                            </button>
                                        </td>
                                    </form>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="p-3 bg-light border-top">
                        <small class="text-muted"><i class="lni lni-information me-1"></i> Si deja el campo "Hasta" vacío, se considerará como el tramo de "Exceso" (infinito).</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
