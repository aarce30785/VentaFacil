@model VentaFacil.web.Models.Response.Inventario.ListInventarioResponse

@{
    ViewData["Title"] = "Gestión de Inventario";
    Layout = "_LayoutPlantilla";

    // Usar datos del modelo para las stats
    var totalInsumos = Model.TotalInsumos;
    var stockBajo = Model.StockBajo;
}

<div class="pt-30">
    <!-- Header -->
    <div class="title-wrapper pt-30 mb-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title">
                    <h2 class="fw-bold text-dark">Gestión de Inventario</h2>
                    <p class="text-muted text-sm">Control de insumos y stock en tiempo real</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="breadcrumb-wrapper">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#0">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Inventario</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros y Acciones -->
    <div class="premium-card mb-4 p-4">
        <form method="get" asp-action="Listar" class="row g-3 align-items-center" id="filtrosInventarioForm">
             <!-- Stats Summary Mini -->
            <div class="col-md-3">
                 <div class="d-flex align-items-center">
                    <div class="avatar bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                        <i class="lni lni-archive fs-4"></i>
                    </div>
                    <div>
                        <h6 class="mb-0">Inventario General</h6>
                        <p class="text-sm text-muted mb-0">@Model.TotalRegistros insumos totales</p>
                    </div>
                </div>
            </div>

            <!-- Campo de búsqueda -->
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-light border-0"><i class="lni lni-search-alt"></i></span>
                    <input type="text" name="busqueda" class="form-control bg-light border-0" 
                           placeholder="Buscar insumo..." 
                           value="@Model.Busqueda" />
                     <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="col-md-5 text-end">
                <div class="d-flex justify-content-end align-items-center gap-2">
                     <button type="button" class="main-btn success-btn btn-hover rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#entradaModal">
                        <i class="lni lni-download me-2"></i> Entrada
                    </button>
                    <button type="button" class="main-btn primary-btn btn-hover rounded-pill px-4" onclick="abrirModalInventario('crear')">
                        <i class="lni lni-plus me-2"></i> Nuevo Insumo
                    </button>
                </div>
            </div>

            <!-- Campos ocultos -->
            <input type="hidden" name="pagina" value="1" />
            <input type="hidden" name="cantidadPorPagina" value="10" />
        </form>
    </div>

    <!-- Stats Grid -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="premium-card stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-3 d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                        <i class="lni lni-package fs-4"></i>
                    </div>
                    <div>
                        <h3 class="mb-0 fw-bold">@totalInsumos</h3>
                        <span class="text-sm text-muted">Total Insumos</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="premium-card stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-warning bg-opacity-10 text-warning rounded-3 d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                        <i class="lni lni-warning fs-4"></i>
                    </div>
                    <div>
                        <h3 class="mb-0 fw-bold">@stockBajo</h3>
                        <span class="text-sm text-muted">Bajo Stock</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="lni lni-checkmark-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="lni lni-warning me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Tabla de Inventario -->
    <div class="table-container animate-fade-in">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="fw-bold mb-1">📦 Listado de Insumos</h5>
                <p class="text-sm text-muted mb-0">Gestiona las existencias de tu inventario</p>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table premium-table">
                <thead>
                    <tr>
                         <th class="lead-name"><h6>Nombre</h6></th>
                        <th><h6>Unidad</h6></th>
                        <th><h6>Stock Actual</h6></th>
                        <th><h6>Stock Mínimo</h6></th>
                        <th class="text-center"><h6>Estado</h6></th>
                        <th class="text-center"><h6>Acciones</h6></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Inventarios != null && Model.Inventarios.Any())
                    {
                        foreach (var item in Model.Inventarios)
                        {
                            var isLowStock = item.StockActual <= item.StockMinimo;
                            <tr>
                                <td class="min-width">
                                    <div class="lead">
                                        <div class="lead-image">
                                             <div class="avatar-sm bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                <i class="lni lni-tag text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="lead-text">
                                            <p>@item.Nombre</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="min-width">
                                    <span class="status-btn active-btn">@item.UnidadMedida</span>
                                </td>
                                <td class="min-width">
                                    <span class="status-btn @(isLowStock ? "inactive-btn" : "success-btn")">@item.StockActual</span>
                                </td>
                                <td class="min-width">
                                    <span class="status-btn info-btn">@item.StockMinimo</span>
                                </td>
                                <td class="min-width text-center">
                                    @if (isLowStock)
                                    {
                                        <span class="status-btn inactive-btn">
                                            <i class="lni lni-warning me-1"></i> Bajo Stock
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-btn success-btn">
                                            <i class="lni lni-checkmark-circle me-1"></i> Disponible
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="action d-flex justify-content-center gap-2">
                                        <!-- Edit Action using AJAX Modal -->
                                        <button type="button" class="text-primary btn btn-link p-0" title="Editar"
                                                onclick="abrirModalInventario('editar', @item.Id_Inventario)">
                                            <i class="lni lni-pencil"></i>
                                        </button>

                                        <!-- Entrada Rápida -->
                                        <button type="button" class="text-success btn btn-link p-0" title="Registrar Entrada"
                                                data-bs-toggle="modal" data-bs-target="#entradaModal"
                                                data-id="@item.Id_Inventario">
                                            <i class="lni lni-plus"></i>
                                        </button>

                                        <!-- Salida Rápida -->
                                        <button type="button" class="text-danger btn btn-link p-0" title="Registrar Salida"
                                                data-bs-toggle="modal" data-bs-target="#salidaModal"
                                                data-id="@item.Id_Inventario">
                                            <i class="lni lni-minus"></i>
                                        </button>

                                        <!-- Eliminar -->
                                        <button type="button" class="text-danger btn btn-link p-0" title="Eliminar"
                                                onclick="confirmarEliminacionInventario(@item.Id_Inventario, '@item.Nombre.Replace("'", "\\'")')">
                                            <i class="lni lni-trash-can"></i>
                                        </button>
                                        
                                         <a href="@Url.Action("HistorialMovimientos", new { idInventario = item.Id_Inventario })"
                                           class="text-info" title="Historial">
                                            <i class="lni lni-agenda"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="empty-state">
                                    <div class="mb-3">
                                        <div class="avatar-lg bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                                            <i class="lni lni-package fs-2 text-muted"></i>
                                        </div>
                                    </div>
                                    <h5 class="fw-bold text-muted">No se encontraron insumos</h5>
                                    <p class="text-muted text-sm mb-0">Intenta cambiar los filtros o registra nuevos insumos.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Paginación -->
    @if (Model.TotalPaginas > 1 && Model.Inventarios != null && Model.Inventarios.Any())
    {
        <div class="pagination-wrapper mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                        <a class="page-link" 
                           href="@Url.Action("Listar", new { 
                               pagina = Model.PaginaActual - 1, 
                               cantidadPorPagina = 10,
                               busqueda = Model.Busqueda
                           })">
                            <i class="lni lni-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPaginas; i++)
                    {
                        <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                            <a class="page-link" 
                               href="@Url.Action("Listar", new { 
                                   pagina = i, 
                                   cantidadPorPagina = 10,
                                   busqueda = Model.Busqueda
                               })">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                        <a class="page-link" 
                           href="@Url.Action("Listar", new { 
                               pagina = Model.PaginaActual + 1, 
                               cantidadPorPagina = 10,
                               busqueda = Model.Busqueda
                           })">
                            <i class="lni lni-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="pagination-info text-center mt-2">
                <p class="text-sm text-muted">
                    Mostrando @((Model.PaginaActual - 1) * 10 + 1)-@Math.Min(Model.PaginaActual * 10, Model.TotalRegistros) de @Model.TotalRegistros registros
                </p>
            </div>
        </div>
    }
</div>

<!-- Container for AJAX Modals -->
<div id="modalContainerInventario"></div>

<!-- Formulario para eliminación (oculto) -->
<form id="deleteForm" method="post" action="@Url.Action("Eliminar")" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId" />
</form>

<!-- Entrada Modal (Legacy/Specific) -->
<div class="modal fade" id="entradaModal" tabindex="-1" aria-labelledby="entradaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold" id="entradaModalLabel">Registrar Entrada</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <form id="entradaForm" asp-action="RegistrarEntrada" method="post">
                    <div id="entradaErrors" class="alert alert-danger d-none rounded-3 shadow-sm border-0"></div>
                    
                    <div class="form-group mb-3">
                        <label for="Entrada_IdInventario" class="form-label fw-bold text-sm text-muted">Insumo</label>
                        <select id="Entrada_IdInventario" name="IdInventario" class="form-select rounded-pill bg-light border-0 px-3" required asp-items="@(new SelectList(Model.Inventarios, "Id_Inventario", "Nombre"))">
                            <option value="">Seleccione Insumo</option>
                        </select>
                         <small class="text-muted">Nota: Solo se muestran los insumos de la página actual en este select.</small>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Entrada_Cantidad" class="form-label fw-bold text-sm text-muted">Cantidad a Agregar</label>
                        <input type="number" id="Entrada_Cantidad" name="Cantidad" class="form-control rounded-pill bg-light border-0 px-3" min="1" required placeholder="Ej. 10" />
                    </div>

                    <div class="form-group">
                        <label for="Entrada_Observaciones" class="form-label fw-bold text-sm text-muted">Observaciones</label>
                        <textarea id="Entrada_Observaciones" name="Observaciones" class="form-control rounded-3 bg-light border-0 px-3" rows="2" placeholder="Motivo de la entrada"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary rounded-pill px-4" onclick="submitMovimientoForm('entradaForm')">Registrar Entrada</button>
            </div>
        </div>
    </div>
</div>

<!-- Salida Modal (Legacy/Specific) -->
<div class="modal fade" id="salidaModal" tabindex="-1" aria-labelledby="salidaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold" id="salidaModalLabel">Registrar Salida</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <form id="salidaForm" asp-action="RegistrarSalida" method="post">
                    <div id="salidaErrors" class="alert alert-danger d-none rounded-3 shadow-sm border-0"></div>
                    
                    <div class="form-group mb-3">
                        <label for="Salida_IdInventario" class="form-label fw-bold text-sm text-muted">Insumo</label>
                        <select id="Salida_IdInventario" name="IdInventario" class="form-select rounded-pill bg-light border-0 px-3" required asp-items="@(new SelectList(Model.Inventarios, "Id_Inventario", "Nombre"))">
                            <option value="">Seleccione Insumo</option>
                        </select>
                         <small class="text-muted">Nota: Solo se muestran los insumos de la página actual en este select.</small>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Salida_Cantidad" class="form-label fw-bold text-sm text-muted">Cantidad a Retirar</label>
                        <input type="number" id="Salida_Cantidad" name="Cantidad" class="form-control rounded-pill bg-light border-0 px-3" min="1" required placeholder="Ej. 5" />
                    </div>

                    <div class="form-group">
                        <label for="Salida_Observaciones" class="form-label fw-bold text-sm text-muted">Observaciones</label>
                        <textarea id="Salida_Observaciones" name="Observaciones" class="form-control rounded-3 bg-light border-0 px-3" rows="2" placeholder="Motivo de la salida"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary rounded-pill px-4" onclick="submitMovimientoForm('salidaForm')">Registrar Salida</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Clean up client-search listener if it existed
        
        // ==========================================
        // Lógica para Modals AJAX (Crear/Editar)
        // ==========================================
        let initialFormValues = {};

        window.abrirModalInventario = function(accion, inventarioId = null) {
            let url = '';
            const params = new URLSearchParams();
            params.append('accion', accion);
            if (inventarioId) params.append('inventarioId', inventarioId);

            url = '@Url.Action("ObtenerModalInventario", "Inventario")' + '?' + params.toString();

            fetch(url)
                .then(response => {
                    if (!response.ok) throw new Error('Error al cargar el modal');
                    return response.text();
                })
                .then(data => {
                    document.getElementById('modalContainerInventario').innerHTML = data;
                    const modalElement = document.getElementById('inventarioModal');
                    const modal = new bootstrap.Modal(modalElement);
                    
                    modalElement.addEventListener('shown.bs.modal', function () {
                        capturarValoresIniciales();
                        configurarSubmitFormInventario(accion);
                    });

                    modal.show();
                })
                .catch(error => {
                    console.error(error);
                    Toastify({
                        text: "Error al abrir el modal",
                        style: { background: "linear-gradient(to right, #ff5f6d, #ffc371)" }
                    }).showToast();
                });
        };

        function capturarValoresIniciales() {
            const form = document.getElementById('inventarioForm');
            if(!form) return;
            
            initialFormValues = {
                Nombre: form.querySelector('[name="Nombre"]')?.value || '',
                UnidadMedida: form.querySelector('[name="UnidadMedida"]')?.value || '',
                StockActual: form.querySelector('[name="StockActual"]')?.value || '0',
                StockMinimo: form.querySelector('[name="StockMinimo"]')?.value || '0'
            };
        }

        function obtenerCambios(form, accion) {
            const cambios = [];
            const currentValues = {
                Nombre: form.querySelector('[name="Nombre"]')?.value || '',
                UnidadMedida: form.querySelector('[name="UnidadMedida"]')?.value || '',
                StockActual: form.querySelector('[name="StockActual"]')?.value || '0',
                StockMinimo: form.querySelector('[name="StockMinimo"]')?.value || '0'
            };

            if (accion === 'editar') {
                if (currentValues.Nombre !== initialFormValues.Nombre) {
                    cambios.push(`<strong>Nombre:</strong> ${initialFormValues.Nombre} <i class="lni lni-arrow-right"></i> ${currentValues.Nombre}`);
                }
                if (currentValues.UnidadMedida !== initialFormValues.UnidadMedida) {
                     const select = form.querySelector('[name="UnidadMedida"]');
                     const oldText = select.querySelector(`option[value="${initialFormValues.UnidadMedida}"]`)?.text || initialFormValues.UnidadMedida;
                     const newText = select.options[select.selectedIndex]?.text || currentValues.UnidadMedida;
                     cambios.push(`<strong>Unidad:</strong> ${oldText} <i class="lni lni-arrow-right"></i> ${newText}`);
                }
                if (parseFloat(currentValues.StockActual) !== parseFloat(initialFormValues.StockActual)) {
                    cambios.push(`<strong>Stock Actual:</strong> ${initialFormValues.StockActual} <i class="lni lni-arrow-right"></i> ${currentValues.StockActual}`);
                }
                 if (parseFloat(currentValues.StockMinimo) !== parseFloat(initialFormValues.StockMinimo)) {
                    cambios.push(`<strong>Stock Mínimo:</strong> ${initialFormValues.StockMinimo} <i class="lni lni-arrow-right"></i> ${currentValues.StockMinimo}`);
                }
            } else {
                cambios.push(`<strong>Nombre:</strong> ${currentValues.Nombre}`);
                const select = form.querySelector('[name="UnidadMedida"]');
                const uniText = select.options[select.selectedIndex]?.text || '';
                cambios.push(`<strong>Unidad:</strong> ${uniText}`);
                cambios.push(`<strong>Stock Inicial:</strong> ${currentValues.StockActual}`);
            }
            return cambios;
        }

        window.configurarSubmitFormInventario = function(accion) {
            const form = document.getElementById('inventarioForm');
            if(!form) return;

             const newForm = form.cloneNode(true);
             form.parentNode.replaceChild(newForm, form);

             newForm.addEventListener('submit', function(e) {
                 e.preventDefault();
                 e.stopPropagation();

                 if (!newForm.checkValidity()) {
                     newForm.classList.add('was-validated');
                     return;
                 }

                 const cambios = obtenerCambios(newForm, accion);
                 let html = '';
                 
                 if (cambios.length === 0) {
                     html = '<div class="alert alert-warning">No se han detectado cambios.</div>';
                 } else {
                     html = accion === 'crear' ? '<p>Datos del nuevo insumo:</p>' : '<p>Cambios detectados:</p>';
                     html += '<ul class="list-group list-group-flush text-start">';
                     cambios.forEach(c => html += `<li class="list-group-item">${c}</li>`);
                     html += '</ul>';
                 }

                 Swal.fire({
                    title: 'Confirmar',
                    html: html,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Guardar',
                     confirmButtonColor: '#365CF5'
                 }).then((result) => {
                     if (result.isConfirmed) {
                         enviarFormularioInventario(newForm);
                     }
                 });
             });
        };

        function enviarFormularioInventario(form) {
            const formData = new FormData(form);
             Swal.fire({ title: 'Guardando...', didOpen: () => Swal.showLoading() });

             fetch(form.action, {
                 method: 'POST',
                 body: formData,
                 headers: { 'X-Requested-With': 'XMLHttpRequest' }
             })
             .then(r => r.json())
             .then(data => {
                 Swal.close();
                 if(data.success) {
                     const modal = bootstrap.Modal.getInstance(document.getElementById('inventarioModal'));
                     modal.hide();
                     Toastify({
                        text: "¡Éxito! Operación realizada",
                        style: { background: "linear-gradient(to right, #00b09b, #96c93d)" }
                     }).showToast();
                     setTimeout(() => window.location.reload(), 1000);
                 } else {
                      let msg = data.errors ? data.errors.join('<br>') : 'Error desconocido';
                      Toastify({
                        text: "Error: " + msg,
                        duration: 5000,
                        escapeMarkup: false,
                        style: { background: "linear-gradient(to right, #ff5f6d, #ffc371)" }
                     }).showToast();
                 }
             })
             .catch(err => {
                 Swal.close();
                 Toastify({ text: "Error de conexión", style: { background: "#ff5f6d" } }).showToast();
             });
        }

        window.confirmarEliminacionInventario = function(id, name) {
            Swal.fire({
                title: 'Eliminar Insumo',
                html: `¿Eliminar <strong>${name}</strong>?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminar'
            }).then((result) => {
                if(result.isConfirmed) {
                    Swal.fire({ title: 'Eliminando...', didOpen: () => Swal.showLoading() });
                    const form = document.getElementById('deleteForm');
                    document.getElementById('deleteId').value = id;
                    form.submit();
                }
            });
        };

        // ==========================================
        // Lógica para Entrada/Salida (Legacy)
        // ==========================================
        function submitMovimientoForm(formId) {
            var form = document.getElementById(formId);
            var formData = new FormData(form);
            var errorDiv = document.getElementById(formId.replace('Form', 'Errors'));
            
            // Get submit button
            const modal = form.closest('.modal');
            const submitBtn = modal.querySelector('.btn-primary');
            const originalText = submitBtn.innerHTML;

            // Loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Procesando...';
            if(errorDiv) {
                errorDiv.classList.add('d-none');
                errorDiv.innerHTML = '';
            }

            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    if(errorDiv) {
                        errorDiv.classList.remove('d-none');
                        if (data.errors) {
                            data.errors.forEach(error => {
                                errorDiv.innerHTML += `<p class="mb-0">${error}</p>`;
                            });
                        } else {
                            errorDiv.innerHTML = '<p class="mb-0">Ocurrió un error inesperado.</p>';
                        }
                    } else {
                         Toastify({
                            text: 'Error: ' + (data.errors ? data.errors.join(', ') : 'Ocurrió un error inesperado.'),
                            style: { background: "#ff5f6d" }
                        }).showToast();
                    }
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                if(errorDiv) {
                    errorDiv.classList.remove('d-none');
                    errorDiv.innerHTML = '<p class="mb-0">Ocurrió un error de conexión.</p>';
                } else {
                    Toastify({ text: 'Ocurrió un error de conexión.', style: { background: "#ff5f6d" } }).showToast();
                }
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            });
        }
        
        // Configuración de modal de Entrada
        var entradaModal = document.getElementById('entradaModal');
        entradaModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            if (id) {
                var select = this.querySelector('#Entrada_IdInventario');
                if (select) select.value = id;
            }
        });

        // Configuración de modal de Salida
        var salidaModal = document.getElementById('salidaModal');
        salidaModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            if (id) {
                var select = this.querySelector('#Salida_IdInventario');
                if (select) select.value = id;
            }
        });
    </script>
