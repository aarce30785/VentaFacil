@{
    ViewData["Title"] = "Error de Perfil";
    Layout = "_LayoutPlantilla";
}

<div class="row justify-content-center mt-50">
            <div class="col-lg-6">
                <div class="card-style text-center">
                    <div class="error-content py-5">
                        <div class="icon-wrapper mb-4 text-danger">
                            <i class="lni lni-warning" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="mb-3">Error al cargar el perfil</h3>
                        <p class="text-muted mb-4">
                            @(TempData["ErrorMessage"] ?? "Ocurrió un problema al intentar recuperar su información personal.")
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="@Url.Action("Index", "Home")" class="main-btn light-btn btn-hover">
                                <i class="lni lni-home me-2"></i> Ir al Inicio
                            </a>
                            <a href="@Url.Action("Perfil", "Usuario")" class="main-btn primary-btn btn-hover">
                                <i class="lni lni-reload me-2"></i> Intentar de nuevo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

