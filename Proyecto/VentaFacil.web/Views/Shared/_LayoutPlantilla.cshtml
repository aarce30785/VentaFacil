<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VentaFacil.web</title>

    <!-- Bootstrap solo una vez -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css" rel="stylesheet">

    <!-- CSS de la plantilla -->
    <link rel="stylesheet" href="~/Plantilla/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Plantilla/css/lineicons.css" />
    <link rel="stylesheet" href="~/Plantilla/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/Plantilla/css/fullcalendar.css" />
    <link rel="stylesheet" href="~/Plantilla/css/main.css" />

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VentaFacil.web.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Token ANTIFORGERY aquí -->
    @Html.AntiForgeryToken()

    <div class="wrapper">
        <!-- Sidebar Dinámico -->
        @if (User.Identity.IsAuthenticated)
        {
            @await Html.PartialAsync("_TopBar")
            @await Html.PartialAsync("_SideBar")
        }

        <div class="main-panel">
            <!-- Contenido Principal -->
            <div class="content pt-5">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - VentaFacil.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- SCRIPTS EN ORDEN CORRECTO -->
    <!-- jQuery primero -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap solo una vez -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts de la plantilla -->
    <script src="~/Plantilla/js/bootstrap.bundle.min.js"></script>
    <script src="~/Plantilla/js/Chart.min.js"></script>
    <script src="~/Plantilla/js/dynamic-pie-chart.js"></script>
    <script src="~/Plantilla/js/moment.min.js"></script>
    <script src="~/Plantilla/js/fullcalendar.js"></script>
    <script src="~/Plantilla/js/jvectormap.min.js"></script>
    <script src="~/Plantilla/js/world-merc.js"></script>
    <script src="~/Plantilla/js/polyfill.js"></script>
    <script src="~/Plantilla/js/main.js"></script>

    <!-- Scripts de las vistas -->
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Script global para verificar que todo cargó -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('=== VERIFICACIÓN DE CARGA ===');
            console.log('jQuery:', typeof $);
            console.log('Bootstrap:', typeof bootstrap);
            console.log('Modal:', typeof bootstrap?.Modal);
            console.log('Token antiforgery:', document.querySelector('input[name="__RequestVerificationToken"]') ? 'Sí' : 'No');

            // Verificar funciones del modal
            console.log('Funciones modal:', {
                abrirModalCrear: typeof abrirModalCrear,
                abrirModalEditar: typeof abrirModalEditar,
                abrirModalVer: typeof abrirModalVer
            });
        });
    </script>
</body>
</html>

