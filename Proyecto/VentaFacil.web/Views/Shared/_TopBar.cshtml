@using VentaFacil.web.Models.Response
@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims
@{
    var nombreSesion = Context.Session.GetString("UsuarioNombre");
    var rolSesion = Context.Session.GetString("UsuarioRol");
    var correoSesion = Context.Session.GetString("UsuarioCorreo");

    var nombre = !string.IsNullOrEmpty(nombreSesion) ? nombreSesion : User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value;
    var rol = !string.IsNullOrEmpty(rolSesion) ? rolSesion : User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
    var correo = !string.IsNullOrEmpty(correoSesion) ? correoSesion : User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)?.Value;
}
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-6">
                <div class="header-left d-flex align-items-center">
                    <div class="menu-toggle-btn mr-15">
                        <button id="menu-toggle" class="main-btn primary-btn btn-hover">
                            <i class="lni lni-chevron-left me-2"></i> Menú
                        </button>
                    </div>
                    <div class="header-search d-none d-md-flex">
                        <form action="#">
                            <input type="text" placeholder="Buscar..." />
                            <button><i class="lni lni-search-alt"></i></button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-6">
                <div class="header-right">
                    <!-- notification start -->
                    <div class="notification-box ml-15 d-none d-md-flex" id="notificacionStock">
                        <button class="dropdown-toggle" type="button" id="notification"
                                onclick="window.location.href='@Url.Action("NotificacionesStockMinimo", "Inventario")'"
                                aria-expanded="false">
                            <i class="lni lni-alarm"></i>
                            <span class="badge bg-danger" id="badgeStock" style="display:none"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notification" id="listaNotificacionesStock">
                            <!-- Aquí se llenarán las notificaciones -->
                        </ul>
                    </div>
                    <!-- notification end -->
                    
                    <!-- profile start -->
                    <div class="profile-box ml-15">
                        <button class="dropdown-toggle bg-transparent border-0" type="button" id="profileDropdown"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="profile-info">
                                <div class="info">
                                    <div class="image">
                                        <img src="~/Plantilla/images/profile/profile-image.png" alt="Profile" />
                                    </div>
                                    <div>
                                        <h6 class="fw-500">@nombre</h6>
                                        <p>@rol</p>
                                    </div>
                                </div>
                            </div>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li>
                                <div class="author-info flex items-center p-3">
                                    <div class="image me-3">
                                        <img src="~/Plantilla/images/profile/profile-image.png" alt="image" class="rounded-circle" width="40">
                                    </div>
                                    <div class="content">
                                        <h6 class="mb-0">@nombre</h6>
                                        <small class="text-muted">@correo</small>
                                    </div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">
                                    <i class="lni lni-user me-2"></i> Perfil
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cogs me-2"></i> Configuración
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a href="javascript:void(0)" class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                    <i class="lni lni-exit me-2"></i>Cerrar Sesión
                                </a>
                                <form id="logoutForm" asp-controller="Login" asp-action="Logout" method="post" style="display:none;">
                                    @Html.AntiForgeryToken()
                                </form>
                            </li>
                        </ul>
                    </div>
                    <!-- profile end -->
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Logout Modal -->
<div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="logoutModalLabel">Cerrar Sesión</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas cerrar tu sesión?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" onclick="document.getElementById('logoutForm').submit();">Cerrar Sesión</button>
            </div>
        </div>
    </div>
</div>

<div id="stock-alert" class="alert alert-warning fade" style="display:none; position:fixed; top:70px; right:30px; z-index:1050;">
    <!-- El mensaje se llenará dinámicamente -->
</div>

<script>
    async function cargarNotificacionesStock() {
        const response = await fetch('@Url.Action("NotificacionesStockMinimoJson", "Inventario")');
        const data = await response.json();
        const badge = document.getElementById('badgeStock');
        const lista = document.getElementById('listaNotificacionesStock');
        lista.innerHTML = '';
        if (data.length > 0) {
            badge.style.display = '';
            badge.textContent = data.length;
            data.forEach(item => {
                lista.innerHTML += `
                    <li>
                        <a href="@Url.Action("NotificacionesStockMinimo", "Inventario")">
                            <div class="d-flex align-items-center">
                                <div class="icon">
                                    <i class="lni lni-alarm text-warning"></i>
                                </div>
                                <div class="content">
                                    <h6>Stock mínimo: ${item.nombre ?? item.Nombre}</h6>
                                    <p class="text-sm text-muted">Stock actual: ${item.stockActual ?? item.StockActual}</p>
                                </div>
                            </div>
                        </a>
                    </li>`;
            });
        } else {
            badge.style.display = 'none';
            lista.innerHTML = `<li><span class="dropdown-item text-muted">Sin notificaciones</span></li>`;
        }
    }

    document.addEventListener('DOMContentLoaded', cargarNotificacionesStock);

    // Actualiza el badge cada 30 segundos
    setInterval(cargarNotificacionesStock, 30000);

    // También actualiza al abrir el dropdown
    document.getElementById('notification').addEventListener('show.bs.dropdown', cargarNotificacionesStock);
</script>
<script>
    async function checkStockMinimo() {
        const response = await fetch('/Inventario/NotificacionesStockMinimo');
        if (response.ok) {
            const inventarios = await response.json();
            const alertDiv = document.getElementById('stock-alert');
            if (inventarios.length > 0) {
                let nombres = inventarios.map(i => i.Nombre || i.nombre).join(', ');
                alertDiv.innerText = '¡Atención! El stock está bajo el mínimo para: ' + nombres;
                alertDiv.style.display = 'block';
                alertDiv.classList.add('show');
                setTimeout(() => {
                    alertDiv.classList.remove('show');
                    alertDiv.style.display = 'none';
                }, 5000);
            } else {
                alertDiv.classList.remove('show');
                alertDiv.style.display = 'none';
            }
        }
    }
    // Llama a la función al cargar la página y cada vez que se actualice el stock
    window.onload = checkStockMinimo;
    setInterval(checkStockMinimo, 30000); // Opcional: actualiza cada 30 segundos
</script>
@if (TempData["StockUpdated"] != null)
{
    <script>
        window.onload = function() { checkStockMinimo(); }
    </script>
}
