        // ==========================================
        // Lógica para Entrada/Salida (Legacy)
        // ==========================================
        function submitMovimientoForm(formId) {
            var form = document.getElementById(formId);
            
            // Custom validation with SweetAlert2 instead of HTML5 browser validation
            let isValid = true;
            let errorMessage = '';

            const inputs = form.querySelectorAll('input[required], select[required], textarea[required]');
            inputs.forEach(input => {
                if (!input.value.trim()) {
                    isValid = false;
                    const label = form.querySelector(`label[for="${input.id}"]`);
                    const fieldName = label ? label.innerText : 'este campo';
                    errorMessage += `<li>El campo <b>${fieldName}</b> es obligatorio.</li>`;
                }
            });

            if (!isValid) {
                Swal.fire({
                    title: 'Campos Incompletos',
                    html: `<ul class="text-start mb-0">${errorMessage}</ul>`,
                    icon: 'warning',
                    confirmButtonColor: '#365CF5',
                    confirmButtonText: 'Entendido'
                });
                return;
            }

            var formData = new FormData(form);
            var errorDiv = document.getElementById(formId.replace('Form', 'Errors'));
            
            // Get submit button
            const modal = form.closest('.modal');
            const submitBtn = modal.querySelector('.btn-primary');
            const originalText = submitBtn.innerHTML;

            // Loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Procesando...';
            if(errorDiv) {
                errorDiv.classList.add('d-none');
                errorDiv.innerHTML = '';
            }

            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    if (data.errors && data.errors.length > 0) {
                        let errorHtml = '<ul class="text-start mb-0">';
                        data.errors.forEach(e => errorHtml += `<li>${e}</li>`);
                        errorHtml += '</ul>';
                        
                        Swal.fire({
                            title: 'No se pudo completar',
                            html: errorHtml,
                            icon: 'error',
                            confirmButtonColor: '#365CF5',
                            confirmButtonText: 'Entendido'
                        });
                    } else {
                         Toastify({
                            text: 'Ocurrió un error inesperado al registrar el movimiento.',
                            style: { background: "#ff5f6d" }
                        }).showToast();
                    }
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalText;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Toastify({ text: 'Ocurrió un error de conexión.', style: { background: "#ff5f6d" } }).showToast();
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            });
        }
        
