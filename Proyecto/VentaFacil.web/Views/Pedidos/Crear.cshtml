@model VentaFacil.web.Models.Dto.PedidoDto

@{
    ViewData["Title"] = "Nuevo Pedido";
}

<div class="card shadow-sm p-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">📋 Registrar Pedido</h4>
    </div>

    <div class="card-body">
        <form asp-action="Crear" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Cliente -->
            <div class="mb-3">
                <label asp-for="Cliente" class="form-label fw-bold"></label>
                <input asp-for="Cliente" class="form-control" placeholder="Nombre del cliente" />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>

            <!-- Tabla de productos -->
            <h5 class="mt-4">🛒 Productos</h5>
            <table class="table table-bordered table-hover mt-2">
                <thead class="table-light">
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="text" class="form-control" placeholder="Id Producto o Nombre" /></td>
                        <td><input type="number" class="form-control" placeholder="Cantidad" /></td>
                        <td><input type="number" class="form-control" placeholder="Precio" /></td>
                    </tr>
                </tbody>
            </table>
            <small class="text-muted">⚠️ Aquí luego conectaremos la lista real de productos.</small>

            
            
            <!-- Ítem mínimo para pruebas -->
            <input type="hidden" name="Items[0].Id_Detalle" value="0" />

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Id Producto</label>
                    <input name="Items[0].Id_Producto" type="number" class="form-control" placeholder="Ej: 1" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Cantidad</label>
                    <input name="Items[0].Cantidad" type="number" class="form-control" value="1" min="1" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Precio Unitario</label>
                    <input name="Items[0].PrecioUnitario" type="number" step="0.01" class="form-control" placeholder="Ej: 1200" required />
                </div>
            </div>
            
            <!-- Botones -->
            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="lni lni-save"></i> Guardar Pedido
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="lni lni-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
