@model dynamic
@{
    ViewData["Title"] = "Detalle de Factura";
    Layout = "_LayoutPlantilla";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning">
                    @TempData["Warning"]
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h4 class="text-success">✅ Pago Completado Exitosamente</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-check-circle text-success fa-5x"></i>
                        <h3 class="mt-3">Factura Generada</h3>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Número de Factura:</strong> @(Model?.NumeroFactura ?? "N/A")</p>
                            <p><strong>Fecha:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Pedido ID:</strong> @(Model?.PedidoId ?? "N/A")</p>
                            <p><strong>Total:</strong> @(Model?.Total?.ToString("C") ?? "N/A")</p>
                        </div>
                    </div>

                    <div class="mt-4">
                        <p class="text-muted">
                            El pedido ha sido enviado a cocina y está siendo preparado.
                        </p>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button onclick="window.print()" class="btn btn-outline-primary me-md-2">
                            <i class="fas fa-print me-2"></i>Imprimir Factura
                        </button>
                        <a href="@Url.Action("Index", "Pedidos")" class="btn btn-primary">
                            <i class="fas fa-list me-2"></i>Volver a Pedidos
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
