@using VentaFacil.web.Models
@using VentaFacil.web.Models.Response.Planilla
@model NominaConsultaResponse

@{
    ViewData["Title"] = "Consultar Nóminas";
    Layout = "~/Views/Shared/_LayoutPlantilla.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Consultar Nóminas</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                    <li class="breadcrumb-item active">Planilla</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@(Model?.Nominas?.Count ?? 0)</h3>
                        <p>Nóminas Generadas</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-file-invoice-dollar"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@((Model?.Nominas?.Sum(x => x.TotalNeto) ?? 0).ToString("C"))</h3>
                        <p>Total Pagado</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@((Model?.Nominas?.Sum(x => x.TotalDeducciones) ?? 0).ToString("C"))</h3>
                        <p>Total Deducciones</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-chart-pie"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-secondary">
                    <div class="inner">
                        <h3>Planilla</h3>
                        <p>Módulo General</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users-cog"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title">Acciones de Planilla</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <a href="@Url.Action("GenerarNomina", "Planilla")" class="btn btn-success mr-1">
                            <i class="fas fa-plus-circle"></i> Generar Nómina
                        </a>
                        <a href="@Url.Action("RegistrarHoras", "Planilla")" class="btn btn-primary mr-1">
                            <i class="fas fa-clock"></i> Registrar Horas
                        </a>
                        <a href="@Url.Action("RegistrarExtrasBonos", "Planilla")"
                           class="btn btn-warning mr-1 text-white">
                            <i class="fas fa-star"></i> Extras/Bonos
                        </a>
                        <a href="@Url.Action("AplicarDeducciones", "Planilla")" class="btn btn-danger mr-1">
                            <i class="fas fa-cut"></i> Deducciones
                        </a>
                    </div>
                    
                    <div class="col-md-12 mt-2">
                        <form method="get" action="@Url.Action("Consultar", "Planilla")" class="form-inline">
                            <div class="form-group mr-2">
                                <label class="mr-2">Periodo:</label>
                                <select name="TipoPeriodo" class="form-control form-control-sm">
                                    <option value="">-- Todos --</option>
                                    <option value="Mensual" selected="@(ViewBag.Filtros?.TipoPeriodo == "Mensual")">Mensual (Este Mes)</option>
                                    <option value="Trimestral" selected="@(ViewBag.Filtros?.TipoPeriodo == "Trimestral")">Trimestral (Últimos 3)</option>
                                    <option value="Anual" selected="@(ViewBag.Filtros?.TipoPeriodo == "Anual")">Anual (Este Año)</option>
                                </select>
                            </div>
                            <div class="form-group mr-2">
                                <label class="mr-2">Usuario:</label>
                                <input type="text" name="BusquedaUsuario" class="form-control form-control-sm" placeholder="Nombre o Correo..." value="@(ViewBag.Filtros?.BusquedaUsuario)">
                            </div>
                            <div class="form-group mr-2">
                                <label class="mr-2">Estado:</label>
                                <select name="Estado" class="form-control form-control-sm">
                                    <option value="">-- Todos --</option>
                                    <option value="Generada" selected="@(ViewBag.Filtros?.Estado == "Generada")">Generada</option>
                                    <option value="Anulada" selected="@(ViewBag.Filtros?.Estado == "Anulada")">Anulada</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-info btn-sm">
                                <i class="fas fa-search"></i> Filtrar
                            </button>
                            <a href="@Url.Action("Consultar", "Planilla")" class="btn btn-default btn-sm ml-1">Limpiar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header border-0">
                <h3 class="card-title">Listado de Nóminas</h3>
                <div class="card-tools">
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-download"></i>
                    </a>
                    <a href="#" class="btn btn-tool btn-sm">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Periodo Inicio</th>
                            <th>Periodo Final</th>
                            <th>Fecha Generación</th>
                            <th>Estado</th>
                            <th>Total Bruto</th>
                            <th>Deducciones</th>
                            <th>Total Neto</th>
                            <th style="width: 150px;" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Nominas != null && Model.Nominas.Any())
                        {
                            foreach (var item in Model.Nominas)
                            {
                                <tr>
                                    <td>@item.Id_Nomina</td>
                                    <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                                    <td>@item.FechaFinal.ToString("dd/MM/yyyy")</td>
                                    <td>@item.FechaGeneracion.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (item.Estado == "Generada")
                                        {
                                            <span class="badge badge-success">Generada</span>
                                        }
                                        else if (item.Estado == "Anulada")
                                        {
                                            <span class="badge badge-danger">Anulada</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@item.Estado</span>
                                        }
                                    </td>
                                    <td class="text-secondary">@item.TotalBruto.ToString("C2")</td>
                                    <td class="text-danger">@item.TotalDeducciones.ToString("C2")</td>
                                    <td class="font-weight-bold text-success">@item.TotalNeto.ToString("C2")</td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a href="#" class="btn btn-sm btn-info disabled" title="Ver Detalle">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("ExportarNomina", "Planilla", new { idNomina = item.Id_Nomina })" class="btn btn-sm btn-secondary" title="Descargar PDF" target="_blank">
                                                <i class="fas fa-file-pdf"></i>
                                            </a>
                                            @if (item.Estado != "Anulada")
                                            {
                                                <form asp-action="RevertirNomina" method="post" style="display:inline;">
                                                    <input type="hidden" name="idNomina" value="@item.Id_Nomina" />
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Anular" onclick="return confirm('¿Está seguro de anular esta nómina?');">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-3">
                                    <i class="fas fa-folder-open mb-2" style="font-size: 2em;"></i>
                                    <p class="m-0">No se encontraron nóminas registradas.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer clearfix">
                @if (Model != null && Model.TotalPaginas > 1)
                {
                    <ul class="pagination pagination-sm m-0 float-right">
                        <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Consultar", new { pagina = Model.PaginaActual - 1 })">&laquo;</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPaginas; i++)
                        {
                            <li class="page-item @(Model.PaginaActual == i ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Consultar", new { pagina = i })">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Consultar", new { pagina = Model.PaginaActual + 1 })">&raquo;</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
</section>