@model VentaFacil.web.Models.Dto.RegistrarHorasDto

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/clockpicker/0.0.7/jquery-clockpicker.min.css" />
    <style>
        .clockpicker-popover { z-index: 999999; }
        .premium-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -2px rgba(0,0,0,0.05);
            border: 1px solid rgba(0,0,0,0.05);
            overflow: hidden;
            margin-bottom: 2rem;
            padding: 2rem 1.5rem 1.5rem 1.5rem;
        }
        .form-label {
            font-weight: 600;
            color: #374151;
        }
        .form-select, .form-control {
            border-radius: 30px;
            font-size: 1rem;
        }
        .input-group-text {
            border-radius: 30px;
        }
        .btn-premium {
            border-radius: 30px !important;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
        }
        .card-title {
            font-weight: 700;
            color: #6d4c41;
        }
    </style>
}

<div class="container-fluid p-0">
    <h2 class="fw-bold text-dark mb-4">Registrar Horas de Trabajo</h2>
    <div class="row justify-content-center">
        <div class="col-12 col-xl-6">
            <div class="premium-card">
                <div class="mb-4">
                    <h5 class="card-title mb-0">Formulario de Registro</h5>
                </div>
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <div class="alert-message">
                            <strong>Error:</strong> @TempData["Error"]
                        </div>
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <div class="alert-message">
                            <strong>Éxito:</strong> @TempData["Success"]
                        </div>
                    </div>
                }
                <form asp-action="RegistrarHoras" method="post" id="formRegistrarHoras">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id_Planilla" />
                    <div class="mb-3">
                        <label asp-for="Id_Usr" class="form-label">Colaborador</label>
                        <select asp-for="Id_Usr" class="form-select" asp-items="ViewBag.Usuarios">
                            <option value="">Seleccione un colaborador...</option>
                        </select>
                        <span asp-validation-for="Id_Usr" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Hora de Entrada</label>
                        <div class="row g-2">
                            <div class="col-md-7">
                                <input type="date" id="fechaInicioDate" class="form-control" required />
                            </div>
                            <div class="col-md-5">
                                <div class="input-group clockpicker" data-autoclose="true">
                                    <input type="text" id="fechaInicioTime" class="form-control" placeholder="00:00" required>
                                    <span class="input-group-text">
                                        <i class="far fa-clock"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="FechaInicio" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="checkIncompleta">
                            <label class="form-check-label" for="checkIncompleta">Marcar como jornada incompleta/interrumpida</label>
                        </div>
                    </div>
                    <div class="mb-3" id="divFechaFinal">
                        <label class="form-label">Hora de Salida</label>
                        <div class="row g-2">
                            <div class="col-md-7">
                                <input type="date" id="fechaFinalDate" class="form-control" />
                            </div>
                            <div class="col-md-5">
                                <div class="input-group clockpicker" data-autoclose="true">
                                    <input type="text" id="fechaFinalTime" class="form-control" placeholder="00:00">
                                    <span class="input-group-text">
                                        <i class="far fa-clock"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="FechaFinal" />
                        <span asp-validation-for="FechaFinal" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Observaciones" class="form-label">Observaciones</label>
                        <textarea asp-for="Observaciones" class="form-control" rows="2" style="border-radius: 16px;"></textarea>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-premium">Registrar Jornada</button>
                        <a asp-action="Consultar" class="btn btn-secondary btn-premium">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clockpicker/0.0.7/jquery-clockpicker.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Inicializar ClockPicker
            $('.clockpicker').clockpicker({
                twelvehour: true,
                donetext: 'Listo'
            });

            // Referencias a elementos
            const form = document.getElementById('formRegistrarHoras');
            const checkIncompleta = document.getElementById("checkIncompleta");
            const divFechaFinal = document.getElementById("divFechaFinal");
            
            // Inputs ocultos (Modelo)
            const hiddenInicio = document.querySelector('input[name="FechaInicio"]');
            const hiddenFinal = document.querySelector('input[name="FechaFinal"]');

            // Inputs visibles
            const dateInicio = document.getElementById('fechaInicioDate');
            const timeInicio = document.getElementById('fechaInicioTime');
            const dateFinal = document.getElementById('fechaFinalDate');
            const timeFinal = document.getElementById('fechaFinalTime');

            // Inicializar valores desde el modelo (si existen)
            function initInputsFromModel(hiddenInput, dateInput, timeInput) {
                if (hiddenInput.value) {
                    const dt = new Date(hiddenInput.value);
                    if (!isNaN(dt.getTime())) {
                        // Formato YYYY-MM-DD
                        const yyyy = dt.getFullYear();
                        const mm = String(dt.getMonth() + 1).padStart(2, '0');
                        const dd = String(dt.getDate()).padStart(2, '0');
                        dateInput.value = `${yyyy}-${mm}-${dd}`;

                        // Formato HH:mm (12h o 24h, clockpicker maneja input text)
                        // Usaremos toLocaleTimeString para formato amigable si se desea, 
                        // pero para clockpicker mejor HH:mm 24h o 12h. 
                        // Vamos a ponerlo en formato simple HH:mm y dejar que clockpicker lo parsee si es necesario
                        let hours = dt.getHours();
                        let minutes = String(dt.getMinutes()).padStart(2, '0');
                        // Convertir a 12h para mostrar bonito al inicio? Clockpicker lo hace.
                        // Dejemos formato 24h en el value, clockpicker con twelvehour: true lo mostrará bien?
                        // Probemos formato HH:mm
                        timeInput.value = `${String(hours).padStart(2, '0')}:${minutes}`;
                    }
                }
            }

            initInputsFromModel(hiddenInicio, dateInicio, timeInicio);
            initInputsFromModel(hiddenFinal, dateFinal, timeFinal);

            // Función para actualizar el input hidden
            function updateHiddenInput(dateInput, timeInput, hiddenInput) {
                if (dateInput.value && timeInput.value) {
                    // Combinar fecha y hora
                    // timeInput.value viene como "08:00PM" o "20:00" dependiendo del picker
                    // Necesitamos un formato ISO válido para el backend binding
                    
                    // Crear fecha base
                    const dateParts = dateInput.value.split('-');
                    const timeString = timeInput.value;
                    
                    // Parsear hora (Clockpicker devuelve string como '13:00' o '01:00PM')
                    // Vamos a usar un objeto Date auxiliar
                    const tempDate = new Date(`${dateInput.value}T${convertTo24Hour(timeString)}`);
                    
                    if (!isNaN(tempDate.getTime())) {
                        // Ajustar a ISO string local (sin Z para que el binding lo tome como local)
                        // Ojo: toISOString() usa UTC.
                        // Mejor formato: YYYY-MM-DDTHH:mm:ss
                        const yyyy = tempDate.getFullYear();
                        const mm = String(tempDate.getMonth() + 1).padStart(2, '0');
                        const dd = String(tempDate.getDate()).padStart(2, '0');
                        const hh = String(tempDate.getHours()).padStart(2, '0');
                        const min = String(tempDate.getMinutes()).padStart(2, '0');
                        
                        hiddenInput.value = `${yyyy}-${mm}-${dd}T${hh}:${min}:00`;
                    }
                } else {
                    hiddenInput.value = '';
                }
            }

            function convertTo24Hour(timeStr) {
                // Soporte básico para HH:mm AM/PM o HH:mm
                // Si no tiene AM/PM asumimos 24h
                const match = timeStr.match(/(\d+):(\d+)\s*(AM|PM)?/i);
                if (!match) return "00:00"; // Fallback

                let [_, hours, minutes, modifier] = match;
                hours = parseInt(hours, 10);

                if (modifier) {
                    if (modifier.toUpperCase() === 'PM' && hours < 12) hours += 12;
                    if (modifier.toUpperCase() === 'AM' && hours === 12) hours = 0;
                }
                
                return `${String(hours).padStart(2, '0')}:${minutes}`;
            }

            // Listeners para actualizar hidden inputs
            [dateInicio, timeInicio].forEach(el => {
                el.addEventListener('change', () => updateHiddenInput(dateInicio, timeInicio, hiddenInicio));
                // Para clockpicker, el evento change se dispara al cerrar
            });

            [dateFinal, timeFinal].forEach(el => {
                el.addEventListener('change', () => updateHiddenInput(dateFinal, timeFinal, hiddenFinal));
            });
            
            // JQuery event listener para clockpicker (a veces nativo change no salta igual)
            $('.clockpicker').find('input').change(function() {
                if(this.id === 'fechaInicioTime') updateHiddenInput(dateInicio, timeInicio, hiddenInicio);
                if(this.id === 'fechaFinalTime') updateHiddenInput(dateFinal, timeFinal, hiddenFinal);
            });


            // Lógica de Jornada Incompleta
            function toggleFechaFinal() {
                if (checkIncompleta.checked) {
                    divFechaFinal.style.display = "none";
                    hiddenFinal.value = ""; 
                    dateFinal.value = "";
                    timeFinal.value = "";
                    // Remover required
                    dateFinal.removeAttribute('required');
                    timeFinal.removeAttribute('required');
                } else {
                    divFechaFinal.style.display = "block";
                    // Agregar required si es necesario
                    // dateFinal.setAttribute('required', '');
                    // timeFinal.setAttribute('required', '');
                }
            }

            checkIncompleta.addEventListener("change", toggleFechaFinal);
            toggleFechaFinal(); // Estado inicial
            
            // Antes de enviar, asegurar que los hidden están actualizados
            form.addEventListener('submit', function() {
                updateHiddenInput(dateInicio, timeInicio, hiddenInicio);
                if (!checkIncompleta.checked) {
                    updateHiddenInput(dateFinal, timeFinal, hiddenFinal);
                } else {
                    hiddenFinal.value = ""; // Asegurar null
                }
            });
        });
    </script>
}