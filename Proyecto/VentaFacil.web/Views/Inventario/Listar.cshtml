        // ==========================================
        // Modal dedicado para Anulación de Movimiento
        // Usa getInstance() o crea nueva instancia cada vez para evitar estado inválido
        // ==========================================
        var _anulacionConfirmada = false;

        function getAnulacionModal() {
            var el = document.getElementById('anulacionModal');
            return bootstrap.Modal.getOrCreateInstance(el);
        }

        document.getElementById('anulacionModal').addEventListener('show.bs.modal', function() {
            document.getElementById('anulacion_Motivo').value = '';
            document.getElementById('anulacion_Error').classList.add('d-none');
            var btn = document.getElementById('btnConfirmarAnulacion');
            btn.disabled = false;
            btn.innerHTML = '<i class="lni lni-ban me-1"></i> Confirmar Anulación';
        });

        document.getElementById('anulacionModal').addEventListener('shown.bs.modal', function() {
            document.getElementById('anulacion_Motivo').focus();
        });

        document.getElementById('btnConfirmarAnulacion').addEventListener('click', function() {
            var motivo = document.getElementById('anulacion_Motivo').value.trim();
            var idMovimiento = document.getElementById('anulacion_IdMovimiento').value;

            if (!motivo) {
                document.getElementById('anulacion_Error').classList.remove('d-none');
                document.getElementById('anulacion_Motivo').focus();
                return;
            }
            document.getElementById('anulacion_Error').classList.add('d-none');

            var btn = this;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Anulando...';

            var formData = new FormData();
            formData.append('Id_Movimiento', idMovimiento);
            formData.append('Motivo', motivo);
            var token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            if (token) formData.append('__RequestVerificationToken', token);

            fetch('@Url.Action("AnularMovimiento", "Inventario")', {
                method: 'POST',
                body: formData,
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(r => r.json())
            .then(data => {
                _anulacionConfirmada = true;
                getAnulacionModal().hide();
                if (data.success) {
                    Swal.fire({
                        title: '¡Anulado!',
                        text: data.message,
                        icon: 'success',
                        confirmButtonColor: '#365CF5'
                    }).then(() => location.reload());
                } else {
                    _anulacionConfirmada = false;
                    Swal.fire('Error', data.message || 'Error desconocido', 'error');
                    btn.disabled = false;
                    btn.innerHTML = '<i class="lni lni-ban me-1"></i> Confirmar Anulación';
                }
            })
            .catch(err => {
                _anulacionConfirmada = false;
                getAnulacionModal().hide();
                Swal.fire('Error de conexión', 'No se pudo conectar con el servidor.', 'error');
            });
        });

        window.anularMovimiento = function(idMovimiento) {
            document.getElementById('anulacion_IdMovimiento').value = idMovimiento;
            _anulacionConfirmada = false;

            var histEl = document.getElementById('historialModal');
            var histModal = histEl ? bootstrap.Modal.getInstance(histEl) : null;

            // Al cerrar anulación sin éxito, reabrir el historial
            document.getElementById('anulacionModal').addEventListener('hidden.bs.modal', function onAnulHidden() {
                document.getElementById('anulacionModal').removeEventListener('hidden.bs.modal', onAnulHidden);
                if (!_anulacionConfirmada && histEl && document.body.contains(histEl)) {
                    bootstrap.Modal.getOrCreateInstance(histEl).show();
                }
            });

            if (histModal) {
                // Cerramos historial y esperamos que termine para abrir anulación
                histEl.addEventListener('hidden.bs.modal', function onHistHidden() {
                    histEl.removeEventListener('hidden.bs.modal', onHistHidden);
                    getAnulacionModal().show();
                });
                histModal.hide();
            } else {
                getAnulacionModal().show();
            }
        };
