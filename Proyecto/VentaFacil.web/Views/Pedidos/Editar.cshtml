@model VentaFacil.web.Models.Dto.PedidoDto
@using VentaFacil.web.Models.Enum

@{
    Layout = "_LayoutPlantilla";
    ViewData["Title"] = $"Editar Pedido #{Model.Id_Venta}";
    bool editable = Model.Estado == PedidoEstado.Borrador;
}

<style>
    :root {
        --primary-color: #4f46e5;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    .premium-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: var(--card-shadow);
        border: 1px solid rgba(0,0,0,0.05);
        overflow: hidden;
        height: 100%;
    }

    .card-header-custom {
        background: #f8fafc;
        padding: 1.5rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .card-body-custom {
        padding: 1.5rem;
    }

    .status-badge-lg {
        padding: 0.5rem 1rem;
        border-radius: 9999px;
        font-weight: 600;
        font-size: 0.875rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .product-list-item {
        transition: background-color 0.2s;
        border-bottom: 1px solid #f1f5f9;
    }

    .product-list-item:last-child {
        border-bottom: none;
    }

    .product-list-item:hover {
        background-color: #f8fafc;
    }

    .total-section {
        background: #f8fafc;
        border-radius: 12px;
        padding: 1.5rem;
        margin-top: 1.5rem;
    }

    .btn-premium {
        border-radius: 9999px;
        padding: 0.6rem 1.5rem;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-premium:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
</style>

<section class="section">
    <div class="container-fluid">
        <!-- Header -->
        <div class="title-wrapper pt-30 mb-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2 class="fw-bold text-dark">Editar Pedido <span class="text-primary">#@Model.Id_Venta</span></h2>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="Index">Pedidos</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Editar #@Model.Id_Venta</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert" style="border-left: 4px solid #10b981 !important;">
                <i class="lni lni-checkmark-circle me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert" style="border-left: 4px solid #ef4444 !important;">
                <i class="lni lni-warning me-2"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Status Bar -->
        <div class="premium-card mb-4">
            <div class="card-body-custom d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <i class="lni lni-calendar text-muted fs-4"></i>
                    </div>
                    <div>
                        <p class="text-muted mb-0 text-sm">Fecha de Creación</p>
                        <h6 class="mb-0">@Model.Fecha.ToString("dd MMM yyyy, HH:mm")</h6>
                    </div>
                </div>
                
                <span class="status-badge-lg @GetBadgeClass(Model.Estado)">
                    <i class="lni lni-flag"></i> @GetEstadoText(Model.Estado)
                </span>
            </div>
        </div>

        @if (!editable)
        {
            <div class="alert alert-warning shadow-sm border-0 mb-4">
                <div class="d-flex align-items-center">
                    <i class="lni lni-lock fs-4 me-3"></i>
                    <div>
                        <h6 class="alert-heading mb-1">Modo de Solo Lectura</h6>
                        <p class="mb-0 text-sm">Este pedido no se puede editar porque se encuentra en estado <strong>@GetEstadoText(Model.Estado)</strong>.</p>
                        
                        @if (Model.Estado == PedidoEstado.Pendiente)
                        {
                            <form method="post" asp-action="ProcederAlPago" class="mt-2">
                                <input type="hidden" name="pedidoId" value="@Model.Id_Venta" />
                                <button type="submit" class="btn btn-success btn-sm rounded-pill px-3">
                                    <i class="lni lni-credit-card me-1"></i> Ir a Pagar
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }

        <div class="row g-4">
            <!-- Columna Izquierda: Info Cliente y Acciones -->
            <div class="col-lg-4">
                <div class="premium-card mb-4">
                    <div class="card-header-custom">
                        <h5 class="mb-0 fw-bold">👤 Cliente & Detalles</h5>
                    </div>
                    <div class="card-body-custom">
                        <form method="post" asp-action="ActualizarCliente" class="mb-4">
                            <input type="hidden" name="pedidoId" value="@Model.Id_Venta" />
                            <label class="form-label fw-bold text-muted text-sm text-uppercase">Nombre del Cliente</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="lni lni-user"></i></span>
                                <input type="text" name="cliente" value="@Model.Cliente" class="form-control border-start-0 ps-0" placeholder="Ej. Juan Pérez" @(!editable ? "disabled" : "") />
                                @if (editable) { <button class="btn btn-outline-primary" type="submit">Ok</button> }
                            </div>
                        </form>

                        <form method="post" asp-action="ActualizarModalidad">
                            <input type="hidden" name="pedidoId" value="@Model.Id_Venta" />
                            <label class="form-label fw-bold text-muted text-sm text-uppercase">Modalidad</label>
                            <select name="modalidad" class="form-select mb-3" @(!editable ? "disabled" : "") onchange="this.form.submit()">
                                <option value="0" selected="@(Model.Modalidad == ModalidadPedido.ParaLlevar)">📦 Para Llevar</option>
                                <option value="1" selected="@(Model.Modalidad == ModalidadPedido.EnMesa)">🍽️ En Mesa</option>
                            </select>

                            @if (Model.Modalidad == ModalidadPedido.EnMesa)
                            {
                                <label class="form-label fw-bold text-muted text-sm text-uppercase">Número de Mesa</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0"><i class="lni lni-grid-alt"></i></span>
                                    <input type="number" name="numeroMesa" value="@Model.NumeroMesa" min="1" class="form-control border-start-0 ps-0" @(!editable ? "disabled" : "") />
                                    @if (editable) { <button class="btn btn-outline-primary" type="submit">Ok</button> }
                                </div>
                            }
                        </form>
                    </div>
                </div>

                @if (editable)
                {
                    <div class="premium-card">
                        <div class="card-body-custom">
                            <h6 class="fw-bold mb-3">Acciones</h6>
                            @{
                                bool tieneProductos = Model.Items.Any();
                                bool tieneCliente = !string.IsNullOrWhiteSpace(Model.Cliente);
                                bool mesaValida = Model.Modalidad != ModalidadPedido.EnMesa || (Model.NumeroMesa.HasValue && Model.NumeroMesa > 0);
                                bool puedeProceder = tieneProductos && tieneCliente && mesaValida;
                            }

                            <form method="post" asp-action="ProcederAlPago" class="mb-2">
                                <input type="hidden" name="pedidoId" value="@Model.Id_Venta" />
                                <button type="submit" class="btn btn-success btn-premium w-100 @(!puedeProceder ? "disabled" : "")">
                                    <i class="lni lni-credit-card me-2"></i> Proceder al Pago
                                </button>
                            </form>
                            
                            @if (!puedeProceder)
                            {
                                <div class="text-xs text-muted mb-3 p-2 bg-light rounded">
                                    <i class="lni lni-warning me-1"></i> Faltan datos:
                                    @if (!tieneProductos) { <span>Productos, </span> }
                                    @if (!tieneCliente) { <span>Cliente, </span> }
                                    @if (!mesaValida) { <span>Mesa</span> }
                                </div>
                            }

                            <form method="post" asp-action="GuardarBorrador" class="mb-2">
                                <input type="hidden" name="pedidoId" value="@Model.Id_Venta" />
                                <button type="submit" class="btn btn-outline-primary btn-premium w-100">
                                    <i class="lni lni-save me-2"></i> Guardar Borrador
                                </button>
                            </form>

                            <button type="button" class="btn btn-warning btn-premium w-100 mb-2 text-white" onclick="iniciarPreparacion(@Model.Id_Venta)">
                                <i class="lni lni-chef-hat me-2"></i> Enviar a Cocina
                            </button>

                            <button type="button" class="btn btn-outline-danger btn-premium w-100 mt-3" data-bs-toggle="modal" data-bs-target="#modalCancelarPedido">
                                <i class="lni lni-close me-2"></i> Cancelar Pedido
                            </button>
                        </div>
                    </div>
                }
            </div>

            <!-- Columna Derecha: Productos -->
            <div class="col-lg-8">
                <div class="premium-card h-100">
                    <div class="card-header-custom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">🛒 Productos</h5>
                        @if (editable)
                        {
                            <button class="btn btn-primary btn-premium btn-sm" data-bs-toggle="modal" data-bs-target="#modalAgregarProducto">
                                <i class="lni lni-plus me-1"></i> Agregar Producto
                            </button>
                        }
                    </div>
                    <div class="card-body-custom p-0">
                        @if (Model.Items.Any())
                        {
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="ps-4 py-3">Producto</th>
                                            <th class="text-center py-3">Cant.</th>
                                            <th class="text-end py-3">Precio</th>
                                            <th class="text-end pe-4 py-3">Subtotal</th>
                                            @if (editable) { <th class="text-center py-3"></th> }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr class="product-list-item">
                                                <td class="ps-4 py-3">
                                                    <div class="fw-bold text-dark">@item.NombreProducto</div>
                                                    @if (!string.IsNullOrEmpty(item.Notas))
                                                    {
                                                        <small class="text-muted"><i class="lni lni-pencil-alt me-1"></i>@item.Notas</small>
                                                    }
                                                </td>
                                                <td class="text-center py-3" style="width: 120px;">
                                                    @if (editable)
                                                    {
                                                        <form method="post" asp-action="ActualizarCantidad" class="d-flex justify-content-center align-items-center gap-1">
                                                            <input type="hidden" name="pedidoId" value="@Model.Id_Venta" />
                                                            <input type="hidden" name="itemId" value="@item.Id_Detalle" />
                                                            <input type="number" name="cantidad" value="@item.Cantidad" min="1" class="form-control form-control-sm text-center px-1" style="width: 60px;" onchange="this.form.submit()" />
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-light text-dark border">@item.Cantidad</span>
                                                    }
                                                </td>
                                                <td class="text-end py-3 text-muted">$@item.PrecioUnitario.ToString("N2")</td>
                                                <td class="text-end pe-4 py-3 fw-bold text-dark">$@item.Subtotal.ToString("N2")</td>
                                                @if (editable)
                                                {
                                                    <td class="text-center py-3">
                                                        <form method="post" asp-action="EliminarProducto">
                                                            <input type="hidden" name="pedidoId" value="@Model.Id_Venta" />
                                                            <input type="hidden" name="itemId" value="@item.Id_Detalle" />
                                                            <button type="submit" class="btn btn-link text-danger p-0" onclick="return confirm('¿Eliminar?')">
                                                                <i class="lni lni-trash-can"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 px-4">
                                <div class="avatar-lg bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                    <i class="lni lni-cart text-muted fs-1"></i>
                                </div>
                                <h5 class="text-muted">El carrito está vacío</h5>
                                <p class="text-sm text-muted">Agrega productos para comenzar el pedido.</p>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white border-top p-4">
                        <div class="d-flex justify-content-end align-items-center">
                            <div class="text-end">
                                <p class="text-muted mb-1 text-sm text-uppercase fw-bold">Total a Pagar</p>
                                <h2 class="fw-bold text-primary mb-0">$@Model.Total.ToString("N2")</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal Agregar Producto -->
@if (editable)
{
    <div class="modal fade" id="modalAgregarProducto" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 16px;">
                <div class="modal-header border-bottom-0 pb-0">
                    <h5 class="modal-title fw-bold">Agregar Producto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form method="post" asp-action="AgregarProducto" id="formAgregarProducto">
                        <input type="hidden" name="pedidoId" value="@Model.Id_Venta" />
                        
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label class="form-label fw-bold">Producto</label>
                                <select name="productoId" class="form-select form-select-lg" required id="selectProducto">
                                    <option value="">Buscar producto...</option>
                                    @foreach (var producto in ViewBag.Productos as List<VentaFacil.web.Models.Dto.ProductoDto> ?? new List<VentaFacil.web.Models.Dto.ProductoDto>())
                                    {
                                        <option value="@producto.Id_Producto"
                                                data-precio="@producto.Precio"
                                                data-nombre="@producto.Nombre"
                                                data-descripcion="@producto.Descripcion">
                                            @producto.Nombre - $@producto.Precio.ToString("N2")
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-bold">Cantidad</label>
                                <input type="number" name="cantidad" class="form-control form-select-lg" value="1" min="1" required />
                            </div>
                        </div>

                        <div id="infoProducto" class="mt-4 p-3 bg-light rounded border d-none">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="fw-bold mb-1" id="nombreProducto"></h6>
                                    <small class="text-muted" id="descripcionProducto"></small>
                                </div>
                                <span class="badge bg-primary fs-6" id="precioProducto"></span>
                            </div>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="button" class="btn btn-light rounded-pill px-4 me-2" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary rounded-pill px-4" id="btnAgregar" disabled>
                                <i class="lni lni-plus me-1"></i> Agregar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Cancelar -->
    <div class="modal fade" id="modalCancelarPedido" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 16px;">
                <div class="modal-body p-4 text-center">
                    <div class="avatar-lg bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                        <i class="lni lni-warning fs-2"></i>
                    </div>
                    <h5 class="fw-bold mb-2">¿Cancelar Pedido?</h5>
                    <p class="text-muted mb-4">Esta acción no se puede deshacer. Por favor indica el motivo.</p>
                    
                    <form method="post" asp-action="CancelarPedido">
                        <input type="hidden" name="id" value="@Model.Id_Venta" />
                        <textarea class="form-control mb-4" name="razon" rows="3" placeholder="Motivo de cancelación..." required></textarea>
                        
                        <div class="d-flex gap-2 justify-content-center">
                            <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Volver</button>
                            <button type="submit" class="btn btn-danger rounded-pill px-4">Confirmar Cancelación</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold" id="modalTitle">Confirmación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                        <i class="lni lni-question-circle fs-3"></i>
                    </div>
                    <div>
                        <p class="mb-0 text-muted" id="modalMessage">¿Estás seguro de realizar esta acción?</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary rounded-pill px-4" id="btnConfirmAction">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold text-danger">Error</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 bg-danger bg-opacity-10 text-danger rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                        <i class="lni lni-warning fs-3"></i>
                    </div>
                    <div>
                        <p class="mb-0 text-muted" id="errorMessage">Ha ocurrido un error inesperado.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Variables globales para el modal
        let confirmModal;
        let errorModal;
        let currentAction = null;

        document.addEventListener('DOMContentLoaded', function() {
            confirmModal = new bootstrap.Modal(document.getElementById('confirmationModal'));
            errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
            
            // Configurar el botón de confirmación
            document.getElementById('btnConfirmAction').addEventListener('click', async function() {
                if (currentAction) {
                    const btn = this;
                    const originalText = btn.innerHTML;
                    btn.disabled = true;
                    btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Procesando...';
                    
                    try {
                        await currentAction();
                        confirmModal.hide();
                    } catch (error) {
                        console.error(error);
                        confirmModal.hide();
                        showError('Ocurrió un error al procesar la solicitud.');
                    } finally {
                        btn.disabled = false;
                        btn.innerHTML = originalText;
                        currentAction = null;
                    }
                }
            });

            const selectProducto = document.getElementById('selectProducto');
            const infoProducto = document.getElementById('infoProducto');
            const nombreProducto = document.getElementById('nombreProducto');
            const descripcionProducto = document.getElementById('descripcionProducto');
            const precioProducto = document.getElementById('precioProducto');
            const btnAgregar = document.getElementById('btnAgregar');

            if (selectProducto) {
                selectProducto.addEventListener('change', function() {
                    const selectedOption = this.options[this.selectedIndex];
                    if (selectedOption.value) {
                        nombreProducto.textContent = selectedOption.getAttribute('data-nombre');
                        descripcionProducto.textContent = selectedOption.getAttribute('data-descripcion') || 'Sin descripción';
                        precioProducto.textContent = '$' + parseFloat(selectedOption.getAttribute('data-precio')).toFixed(2);
                        infoProducto.classList.remove('d-none');
                        btnAgregar.disabled = false;
                    } else {
                        infoProducto.classList.add('d-none');
                        btnAgregar.disabled = true;
                    }
                });
            }
        });

        // Helper para mostrar confirmación
        function showConfirm(title, message, action) {
            document.getElementById('modalTitle').innerText = title;
            document.getElementById('modalMessage').innerText = message;
            currentAction = action;
            confirmModal.show();
        }

        // Helper para mostrar error
        function showError(message) {
            document.getElementById('errorMessage').innerText = message;
            errorModal.show();
        }

        function iniciarPreparacion(id) {
            showConfirm(
                'Enviar a Cocina',
                `¿Deseas enviar el pedido #${id} a cocina para su preparación?`,
                async () => {
                    try {
                        const response = await fetch('@Url.Action("IniciarPreparacion", "Pedidos")', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ pedidoId: id })
                        });
                        
                        const data = await response.json();
                        
                        if(data.success) {
                            window.location.href = '@Url.Action("Index", "Pedidos")';
                        } else {
                            throw new Error(data.message || 'Error al enviar a cocina');
                        }
                    } catch (error) {
                        console.error(error);
                        throw error;
                    }
                }
            );
        }
    </script>
}

@functions {
    private string GetBadgeClass(PedidoEstado estado)
    {
        return estado switch
        {
            PedidoEstado.Borrador => "bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25",
