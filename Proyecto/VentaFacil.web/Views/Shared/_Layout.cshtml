<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VentaFacil.web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VentaFacil.web.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Sidebar Dinámico -->
        @if (User.Identity.IsAuthenticated)
        {
            @Html.Partial("_SideBar")
        }

        <div class="main-panel">
            
            <!-- Contenido Principal -->
            <div class="content pt-5">
                @RenderBody()
            </div>

            
            
        </div>
    </div>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - VentaFacil.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <div id="stock-alert" class="alert alert-warning fade" style="display:none; position:fixed; top:70px; right:30px; z-index:1050;">
      <!-- El mensaje se llenará dinámicamente -->
  </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
    async function checkStockMinimo() {
        const response = await fetch('@Url.Action("NotificacionesStockMinimoJson", "Inventario")');
        if (response.ok) {
            const inventarios = await response.json();
            const alertDiv = document.getElementById('stock-alert');
            if (inventarios.length > 0) {
                let nombres = inventarios.map(i => i.Nombre || i.nombre).join(', ');
                alertDiv.innerText = '¡Atención! El stock está bajo el mínimo para: ' + nombres;
                alertDiv.style.display = 'block';
                alertDiv.classList.add('show');
                setTimeout(() => {
                    alertDiv.classList.remove('show');
                    alertDiv.style.display = 'none';
                }, 5000);
            } else {
                alertDiv.classList.remove('show');
                alertDiv.style.display = 'none';
            }
        }
    }
    window.onload = checkStockMinimo;
    setInterval(checkStockMinimo, 30000); // Actualiza cada 30 segundos
</script>
</body>
</html>
