@model VentaFacil.web.Models.Dto.InventarioDto

@{
    var accion = ViewBag.AccionModal as string ?? "crear";
    var esSoloLectura = accion == "ver";
    var titulo = accion switch
    {
        "crear" => "Registrar Nuevo Insumo",
        "editar" => "Editar Insumo",
        "ver" => "Ver Insumo",
        _ => "Insumo"
    };
    var actionName = accion == "crear" ? "Registrar" : "Editar";
}

<div class="modal fade" id="inventarioModal" tabindex="-1" aria-labelledby="inventarioModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inventarioModalLabel">@titulo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="inventarioForm" method="post" asp-action="@actionName">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id_Inventario" />

                <div class="modal-body">
                    <div class="row">
                        <!-- Nombre -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre del Insumo *</label>
                                <input asp-for="Nombre" class="form-control"
                                       placeholder="Ingrese el nombre"
                                       readonly="@esSoloLectura" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Unidad de Medida -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="UnidadMedida" class="form-label">Unidad de Medida *</label>
                                <select asp-for="UnidadMedida" class="form-select"
                                        asp-items="Html.GetEnumSelectList<VentaFacil.web.Models.Enum.UnidadMedida>()"
                                        disabled="@esSoloLectura">
                                    <option value="">Seleccione una unidad</option>
                                </select>
                                <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Stock Actual -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="StockActual" class="form-label">Stock Actual</label>
                                <input asp-for="StockActual" type="number" step="0.01" class="form-control"
                                       placeholder="0.00"
                                       readonly="@esSoloLectura" />
                                <span asp-validation-for="StockActual" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Stock Mínimo -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="StockMinimo" class="form-label">Stock Mínimo</label>
                                <input asp-for="StockMinimo" type="number" step="0.01" class="form-control"
                                       placeholder="0.00"
                                       readonly="@esSoloLectura" />
                                <span asp-validation-for="StockMinimo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    @if (!esSoloLectura)
                    {
                        <button type="submit" class="btn btn-primary">
                            @(accion == "crear" ? "Registrar" : "Guardar Cambios")
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
